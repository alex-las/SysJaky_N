@page
@model SysJaky_N.Pages.Admin.Companies.IndexModel
@inject IStringLocalizer<SysJaky_N.Pages.Admin.Companies.IndexModel> Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}
<h1>@Localizer["PageTitle"]</h1>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success" role="alert">@statusMessage</div>
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <partial name="_CompanyForm" model="Model.NewCompany" />
    <button type="submit" class="btn btn-primary">@Localizer["CreateButton"]</button>
</form>

<table class="table mt-3">
    <thead>
        <tr>
            <th>@Localizer["TableHeaderName"]</th>
            <th>@Localizer["TableHeaderReferenceCode"]</th>
            <th>@Localizer["TableHeaderManager"]</th>
            <th class="text-end">@Localizer["TableHeaderActions"]</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var company in Model.Companies)
    {
        <tr>
            <td>@company.Name</td>
            <td>@company.ReferenceCode</td>
            <td>@company.Manager?.Email</td>
            <td class="text-end">
                <a asp-page="Edit" asp-route-id="@company.Id" class="btn btn-sm btn-secondary">@Localizer["EditButton"]</a>
                <a asp-page="Delete" asp-route-id="@company.Id" class="btn btn-sm btn-danger ms-1">@Localizer["DeleteButton"]</a>
            </td>
        </tr>
    }
    </tbody>
</table>
