@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using Microsoft.Extensions.Localization
@using SysJaky_N.Authorization
@using SysJaky_N.Extensions
@using SysJaky_N.Resources
@using System.Linq
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject IStringLocalizer<CompanyContactResources> CompanyContact
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.TwoLetterISOLanguageName ?? "cs";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? string.Empty;
    var canAccessAdmin = ApplicationRoles.AdminDashboardRoles.Any(User.IsInRole);
    var returnUrl = string.Concat(Context.Request.Path, Context.Request.QueryString);
    var navigationItems = new (string Page, string ResourceKey)[]
    {
        ("/Index", "NavHome"),
        ("/About", "NavAbout"),
        ("/Services", "NavServices"),
        ("/Courses/Index", "NavCourses"),
        ("/CorporateInquiry", "NavCorporateInquiry")
    };
    bool IsCurrentPage(string page) => string.Equals(currentPage, page, System.StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["BrandName"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" />
    <meta name="theme-color" content="#0B4AE6" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Hlavní navigace -->
    <nav class="navbar navbar-expand-lg navbar-dark brand-navbar shadow-sm sticky-top py-2">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-page="/Index">
                <i class="bi bi-award-fill me-2"></i>
                @Localizer["BrandName"]
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
                    @foreach (var item in navigationItems)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(IsCurrentPage(item.Page) ? "active fw-semibold" : "")" 
                               asp-page="@item.Page">
                                @Localizer[item.ResourceKey]
                            </a>
                        </li>
                    }
                    
                    <!-- Přepínač jazyků (pouze CZ/EN, ne v Admin sekci) -->
                    <li class="nav-item dropdown ms-lg-3">
                        <button class="nav-link dropdown-toggle btn btn-link text-decoration-none text-white-50" type="button" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-globe2 me-1" aria-hidden="true"></i>
                            @(currentCulture.ToUpper())
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" role="menu" aria-label='@Localizer["LanguageMenuLabel"]'>
                            <li>
                                <form method="post" asp-controller="Localization" asp-action="SetLanguage" class="px-3 py-1"
                                      aria-label='@Localizer["ChangeLanguageFormLabel"]'>
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                    <button type="submit" name="culture" value="cs"
                                            class="dropdown-item w-100 text-start @(string.Equals(currentCulture, "cs", System.StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)"
                                            role="menuitem">
                                        @Localizer["LanguageNameCs"]
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form method="post" asp-controller="Localization" asp-action="SetLanguage" class="px-3 py-1"
                                      aria-label='@Localizer["ChangeLanguageFormLabel"]'>
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                    <button type="submit" name="culture" value="en"
                                            class="dropdown-item w-100 text-start @(string.Equals(currentCulture, "en", System.StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)"
                                            role="menuitem">
                                        @Localizer["LanguageNameEn"]
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                    
                    @if (canAccessAdmin)
                    {
                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-sm btn-outline-light btn-admin-switch" asp-page="/Admin/Dashboard/Index">
                                <i class="bi bi-speedometer2 me-1"></i>
                                @Localizer["AdminDashboard"]
                            </a>
                        </li>
                    }

                    <li class="nav-item ms-lg-4 d-flex align-items-center">
                        @await Component.InvokeAsync("CartIndicator")
                    </li>

                    <li class="nav-item ms-lg-4 d-flex align-items-center">
                        <partial name="~/Pages/Shared/_LoginPartial.cshtml" />
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hlavní obsah -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Patička -->
    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row g-4 align-items-center mb-5 pb-4 border-bottom border-light-subtle">
                <div class="col-lg-6">
                    <h2 class="h4 fw-bold mb-3">@Localizer["NewsletterHeading"]</h2>
                    <p class="text-white-50 mb-0">@Localizer["NewsletterDescription"]</p>
                </div>
                <div class="col-lg-6">
                    <form method="post"
                          action="@Url.Page("/Api/Newsletter")"
                          class="bg-white text-dark rounded-4 shadow-sm p-4 h-100 d-flex flex-column gap-3"
                          data-newsletter-form
                          data-success-message="@Localizer["NewsletterSuccessMessage"]"
                          data-error-message="@Localizer["NewsletterErrorMessage"]"
                          data-loading-text="@Localizer["NewsletterButtonLoadingText"]"
                          aria-busy="false">
                        <div>
                            <label class="form-label fw-semibold" for="newsletter-email">@Localizer["NewsletterEmailLabel"]</label>
                            <input type="email"
                                   class="form-control"
                                   id="newsletter-email"
                                   name="Input.Email"
                                   placeholder="@Localizer["NewsletterPlaceholder"]"
                                   autocomplete="email"
                                   required />
                        </div>
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="newsletter-consent"
                                   name="Input.Consent"
                                   value="true"
                                   required />
                            <label class="form-check-label text-muted" for="newsletter-consent">
                                @Localizer["NewsletterConsentText"]
                            </label>
                        </div>
                        <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-3">
                            <button type="submit" class="btn btn-primary" data-newsletter-submit>
                                @Localizer["NewsletterButtonText"]
                            </button>
                            <p class="small mb-0 text-muted" data-newsletter-status role="status" aria-live="polite"></p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">@Localizer["BrandName"]</h5>
                    <p class="text-white-50">
                        @Localizer["FooterDescription"]
                    </p>
                </div>
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">@Localizer["FooterContactHeading"]</h5>
                    <ul class="list-unstyled text-white-50">
                        <li class="mb-2">
                            <i class="bi bi-envelope me-2"></i>
                            <a href="mailto:@CompanyContact["Email"]" class="text-white-50 text-decoration-none">
                                @CompanyContact["Email"]
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone me-2"></i>
                            <a href="tel:@CompanyContact["Phone"]" class="text-white-50 text-decoration-none">
                                @CompanyContact["Phone"]
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-geo-alt me-2"></i>
                            @CompanyContact["Address"]
                        </li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">@Localizer["FooterLinksHeading"]</h5>
                    <ul class="list-unstyled">
                        @foreach (var item in navigationItems)
                        {
                            <li class="mb-2">
                                <a asp-page="@item.Page" class="text-white-50 text-decoration-none">
                                    @Localizer[item.ResourceKey]
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <hr class="my-4 bg-white-50" />
            <div class="text-center text-white-50">
                <p class="mb-0">
                    &copy; @DateTime.Now.Year @Localizer["BrandName"]. @Localizer["FooterRights"]
                </p>
            </div>
        </div>
    </footer>

    <div class="pointer-events-none fixed inset-0 flex items-end justify-end px-4 py-6 sm:items-start sm:p-6" aria-live="assertive" aria-atomic="true" x-data="{}">
        <div class="flex w-full flex-col gap-3 sm:max-w-sm" x-cloak>
            <div
                x-show="$store.toast.isOpen"
                x-transition.opacity.duration.200ms
                role="status"
                class="pointer-events-auto flex items-start gap-4 rounded-2xl bg-gradient-to-br p-4 text-white shadow-lg shadow-slate-900/20 ring-1 ring-white/10"
                :class="{
                    'from-emerald-500 via-emerald-600 to-emerald-700': $store.toast.type === 'success',
                    'from-rose-500 via-rose-600 to-rose-700': ['error', 'danger'].includes($store.toast.type),
                    'from-amber-400 via-amber-500 to-amber-600 text-slate-900': $store.toast.type === 'warning',
                    'from-slate-600 via-slate-700 to-slate-900': !['success', 'error', 'danger', 'warning'].includes($store.toast.type)
                }"
            >
                <div class="flex-1 text-sm font-medium" x-text="$store.toast.message"></div>
                <button
                    type="button"
                    class="rounded-full bg-white/20 p-1 text-white transition hover:bg-white/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-white"
                    :class="{ 'text-slate-900 hover:bg-white/80 focus-visible:ring-slate-900': $store.toast.type === 'warning' }"
                    aria-label='@Localizer["Dismiss"]'
                    @@click="$store.toast.hide()"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/lib/altcha/altcha.min.js" asp-append-version="true"></script>
    <script defer src="~/lib/alpine/alpine-csp.js" asp-append-version="true"></script>
    <script src="~/js/alpine-components.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chatbot.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("ChatbotWidget")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
