@page
@model SysJaky_N.Pages.Account.LogoutModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<section class="py-5 text-center">
    <div class="container">
        <h1 class="display-6 mb-3">@Localizer["Heading"]</h1>
        <p class="lead text-muted mb-4">@Localizer["Description"]</p>
        <form method="post" class="d-inline-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-box-arrow-right me-2" aria-hidden="true"></i>
                <span>@Localizer["LogoutButton"]</span>
            </button>
            <a asp-page="/Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                <span>@Localizer["CancelButton"]</span>
            </a>
        </form>
    </div>
</section>
