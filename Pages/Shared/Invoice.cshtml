@model SysJaky_N.Models.Order
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ccc; padding: 8px; }
        th { background-color: #f2f2f2; }
    </style>
</head>
<body>
    <h1>Invoice #@Model.Id</h1>
    <p>Date: @Model.CreatedAt.ToString("d")</p>

    <h2>Company</h2>
    <p>
        SysJaky_N s.r.o.<br />
        Example Street 1<br />
        City<br />
        VAT: CZ12345678
    </p>

    <h2>Items</h2>
    <table>
        <thead>
            <tr>
                <th>Course</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            var price = item.Course?.Price ?? 0;
            <tr>
                <td>@item.Course?.Title</td>
                <td>@item.Quantity</td>
                <td>@price</td>
                <td>@(price * item.Quantity)</td>
            </tr>
        }
        </tbody>
    </table>

    <h3>Total: @Model.TotalPrice</h3>
</body>
</html>

