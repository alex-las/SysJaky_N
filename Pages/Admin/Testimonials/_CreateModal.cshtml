@model SysJaky_N.Pages.Admin.Testimonials.CreateModel
@{
    Layout = null;
    var title = "Nová reference";
}

<div data-admin-modal-slot="header">
    <h5 class="modal-title">@title</h5>
    <button type="button" class="btn-close" data-admin-modal-dismiss aria-label="Zavřít"></button>
</div>
<div data-admin-modal-slot="body">
    <form method="post" class="needs-validation" novalidate id="adminModalForm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <partial name="~/Pages/Admin/Testimonials/_TestimonialForm.cshtml" model="Model.Testimonial" />
        <div class="alert alert-info mt-4" role="note">
            V rámci GDPR ukládejte pouze údaje, které jsou nezbytné pro prezentaci reference.
        </div>
    </form>
</div>
<div data-admin-modal-slot="actions">
    <button type="submit" class="btn btn-admin-primary" form="adminModalForm">Uložit</button>
    <button type="button" class="btn btn-admin-ghost" data-admin-modal-dismiss>Zrušit</button>
</div>
