@model SysJaky_N.Pages.Admin.Articles.DeleteModel
@{
    Layout = null;
    var title = "Smazat článek";
}

<div data-admin-modal-slot="header">
    <h5 class="modal-title text-danger">@title</h5>
    <button type="button" class="btn-close" data-admin-modal-dismiss aria-label="Zavřít"></button>
</div>
<div data-admin-modal-slot="body">
    <form method="post" id="adminModalForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Article!.Id" />
        <p>Opravdu chcete smazat článek <strong>@Model.Article?.Title</strong>?</p>
        <div class="alert alert-warning" role="alert">
            Tato akce je nevratná.
        </div>
    </form>
</div>
<div data-admin-modal-slot="actions">
    <button type="submit" class="btn btn-admin-warning" form="adminModalForm">Smazat</button>
    <button type="button" class="btn btn-admin-ghost" data-admin-modal-dismiss>Zrušit</button>
</div>
