@page "{id:int}"
@model SysJaky_N.Pages.Admin.CourseCategories.DeleteModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = ViewData["Title"] ?? Localizer["Title"].Value;
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning" role="alert">
    @Localizer["DeleteConfirmation", Model.Category?.Name]
</div>

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <partial name="~/Pages/Shared/_FormActions.cshtml" model='new SysJaky_N.Pages.Admin.Shared.FormActionsModel { SubmitText = Localizer["DeleteSubmit"].Value ?? "Smazat", SubmitCssClass = "btn btn-danger", CancelText = Localizer["BackLink"].Value ?? "ZpÄ›t" }' />
</form>
