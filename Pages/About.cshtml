@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject SysJaky_N.Services.IsoStandards.IIsoSpecializationMetadataProvider IsoMetadataProvider
@{
    ViewData["Title"] = Localizer["Title"];
    var isoSpecializations = IsoMetadataProvider.GetAll();
}

<section class="py-5">
    <div class="text-center mb-5">
        <span class="text-uppercase text-primary fw-semibold">@Localizer["CompanyBadge"]</span>
        <h1 class="display-5 fw-bold mt-3">@Localizer["CompanyHeading"]</h1>
        <p class="lead text-muted">@Localizer["CompanyLead"]</p>
    </div>

    <div class="row g-4 align-items-stretch">
        <div class="col-12 col-lg-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4 p-lg-5">
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="icon-circle-sm bg-primary-subtle text-primary">
                            <i class="bi bi-bullseye fs-3" aria-hidden="true"></i>
                        </div>
                        <h2 class="h4 mb-0">@Localizer["MissionHeading"]</h2>
                    </div>
                    <p class="mb-0">@Localizer["MissionDescription"]</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4 p-lg-5">
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="icon-circle-sm bg-primary-subtle text-primary">
                            <i class="bi bi-people-fill fs-3" aria-hidden="true"></i>
                        </div>
                        <h2 class="h4 mb-0">@Localizer["ServicesHeading"]</h2>
                    </div>
                    <ul class="list-unstyled mb-0 d-grid gap-2">
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceCertificationPreparation"]</span>
                        </li>
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceLabAccreditation"]</span>
                        </li>
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceTraining"]</span>
                        </li>
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceAudits"]</span>
                        </li>
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceTailoredTraining"]</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("/Pages/Shared/_ServiceOverviewSnippets.cshtml")

<section class="py-5 border-top">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-12 col-lg-6">
                <img src="~/img/articles/iso9001-preparation.svg"
                     alt="Ilustrační grafika přípravy na ISO 9001"
                     class="img-fluid rounded-4 shadow-sm" />
            </div>
            <div class="col-12 col-lg-6" x-data>
                <h2 class="h3 mb-3">Podívejte se na ukázku dokumentace</h2>
                <p class="text-muted">Náhled šablony vám ukáže, jak přehledně dokážeme strukturovat procesy a záznamy před certifikací.</p>
                <button type="button"
                        class="btn btn-outline-primary d-inline-flex align-items-center gap-2"
                        x-on:click="$dispatch('open-lightbox', { title: 'Ukázka šablony ISO 9001', description: 'Detailní pohled na doporučenou strukturu dokumentace před certifikací.', imageUrl: '@Url.Content("~/img/articles/iso9001-preparation.svg")' })">
                    <i class="bi bi-arrows-fullscreen" aria-hidden="true"></i>
                    Otevřít náhled
                </button>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light rounded-4">
    <div class="container py-4">
        <div class="text-center mb-4">
            <div class="d-inline-flex align-items-center gap-2 px-3 py-1 bg-white shadow-sm rounded-pill">
                <i class="bi bi-stars text-warning" aria-hidden="true"></i>
                <span class="fw-semibold text-uppercase small">@Localizer["ExpertiseBadge"]</span>
            </div>
            <h2 class="mt-3">@Localizer["ExpertiseHeading"]</h2>
            <p class="text-muted mb-0">@Localizer["ExpertiseDescription"]</p>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
            @foreach (var specialization in isoSpecializations)
            {
                <div class="col">
                    <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                        <i class="bi @specialization.OverviewIconClass @(specialization.AboutIconColorClass ?? "text-primary") fs-1" aria-hidden="true"></i>
                        <h3 class="h5 mt-3">@specialization.Name</h3>
                        <p class="text-muted mb-0">@specialization.Summary</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
