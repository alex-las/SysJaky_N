@model SysJaky_N.Models.ViewModels.CartIndicatorViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    var itemCount = Model.ItemCount;
    var hasItems = itemCount > 0;
}
<a class="nav-link position-relative d-inline-flex align-items-center" asp-page="/Cart" aria-label="@Localizer["CartAriaLabel"]">
    <i class="bi bi-cart3 fs-5" aria-hidden="true"></i>
    <span class="d-none d-lg-inline ms-2">@Localizer["Cart"]</span>
    <span class="visually-hidden">@Localizer["CartItemCount", itemCount]</span>
    @if (hasItems)
    {
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            @itemCount
            <span class="visually-hidden">@Localizer["CartItemCount", itemCount]</span>
        </span>
    }
</a>
