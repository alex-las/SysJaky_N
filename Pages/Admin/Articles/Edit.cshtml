@page "{id:int}"
@model SysJaky_N.Pages.Admin.Articles.EditModel
@{
    ViewData["Title"] = "Upravit článek";
}

<h1>Upravit článek</h1>

<form method="post">
    <input type="hidden" asp-for="Article.Id" />
    <partial name="_ArticleForm" for="Article" />
    <partial name="~/Pages/Shared/_FormActions.cshtml" model='new SysJaky_N.Pages.Admin.Shared.FormActionsModel { SubmitText = "Uložit", CancelText = "Zpět na přehled" }' />
</form>

@section Styles {
    <link rel="stylesheet" href="~/lib/quill/quill.core.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/quill/quill.snow.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/lib/quill/quill.min.js" asp-append-version="true"></script>
    <script src="~/js/admin-article-editor.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}
