                                {
                                    <span class="text-muted">Naplánováno na @issue.ScheduledForUtc.Value.ToLocalTime().ToString("g")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Neodesláno</span>
                                }
                            </td>
                            <td>@(issue.NewsletterTemplate?.Name ?? "")</td>
                            <td>
                                @if (issue.Categories.Count == 0)
                                {
                                    <span class="text-muted">Bez kategorií</span>
                                }
                                else
                                {
                                    foreach (var category in issue.Categories)
                                    {
                                        <span class="badge bg-secondary me-1">@category.NewsletterSectionCategory?.Name</span>
                                    }
                                }
                            </td>
                            <td>
                                @if (issue.Sections.Count == 0)
