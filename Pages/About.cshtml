        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
            @foreach (var specialization in isoSpecializations)
            {
                <div class="col">
                    <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                        <i class="bi @specialization.OverviewIconClass @(specialization.AboutIconColorClass ?? "text-primary") fs-1" aria-hidden="true"></i>
                        <h3 class="h5 mt-3">@specialization.Name</h3>
                        <p class="text-muted mb-0">@specialization.Summary</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <span class="text-uppercase text-primary fw-semibold">@Localizer["TeamBadge"]</span>
            <h2 class="display-6 fw-bold mt-3">@Localizer["TeamHeading"]</h2>
            <p class="lead text-muted">@Localizer["TeamDescription"]</p>
        </div>

        <div class="row row-cols-1 row-cols-lg-2 g-4">
            @foreach (var member in teamMembers)
            {
                <div class="col">
                    <article class="card h-100 shadow-sm border-0">
                        <div class="card-body p-4 p-lg-5 d-flex flex-column">
                            <div class="d-flex align-items-start gap-3">
                                <div class="rounded-circle @member.PhotoColorClass d-flex align-items-center justify-content-center fw-semibold" style="width: 72px; height: 72px;">
                                    <span>@member.Initials</span>
                                </div>
                                <div class="flex-grow-1">
                                    <h3 class="h5 mb-1">@member.Name</h3>
                                    <p class="text-muted small mb-2">@member.Focus</p>
                                    @if (!string.IsNullOrWhiteSpace(member.LinkedInUrl))
                                    {
                                        <a class="btn btn-sm btn-outline-primary d-inline-flex align-items-center gap-2" href="@member.LinkedInUrl" target="_blank" rel="noopener" aria-label="@Localizer["TeamLinkedInAriaLabel", member.Name]">
                                            <i class="bi bi-linkedin" aria-hidden="true"></i>
                                            @Localizer["TeamLinkedInLabel"]
                                        </a>
                                    }
                                </div>
                            </div>

                            <div class="mt-4">
                                <span class="badge bg-primary-subtle text-primary fw-semibold px-3 py-2">
                                    @Localizer["TeamAuditsLabel"]: <span class="ms-1">@member.AuditsTrainings</span>
                                </span>
                            </div>

                            @if (member.Education.Count > 0)
                            {
                                <div class="mt-4">
                                    <h4 class="h6 text-uppercase text-muted mb-2">@Localizer["TeamEducationHeading"]</h4>
                                    <ul class="list-unstyled mb-0 small d-grid gap-1">
                                        @foreach (var education in member.Education)
                                        {
                                            <li class="d-flex align-items-start gap-2">
                                                <i class="bi bi-mortarboard-fill text-primary" aria-hidden="true"></i>
                                                <span>@education</span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }

                            <div class="mt-4">
                                <h4 class="h6 text-uppercase text-muted mb-2">@Localizer["TeamExperienceHeading"]</h4>
                                <ul class="list-unstyled mb-0 small d-grid gap-1">
                                    @foreach (var experience in member.Experience)
                                    {
                                        <li class="d-flex align-items-start gap-2">
                                            <i class="bi bi-briefcase-fill text-primary" aria-hidden="true"></i>
                                            <span>@experience</span>
                                        </li>
                                    }
                                </ul>
                            </div>

                            <div class="mt-4">
                                <h4 class="h6 text-uppercase text-muted mb-2">@Localizer["TeamSpecializationsHeading"]</h4>
                                <ul class="list-unstyled d-flex flex-wrap gap-2 mb-0">
                                    @foreach (var specialization in member.Specializations)
                                    {
                                        <li>
                                            <span class="badge rounded-pill bg-primary text-white fw-semibold shadow-sm">@specialization</span>
                                        </li>
                                    }
                                </ul>
                            </div>

                            <div class="mt-4">
                                <h4 class="h6 text-uppercase text-muted mb-2">@Localizer["TeamPortfolioHeading"]</h4>
                                <ul class="list-unstyled d-flex flex-wrap gap-2 mb-0">
                                    @foreach (var course in member.Portfolio)
                                    {
                                        <li>
                                            <span class="badge bg-primary-subtle text-primary">@course</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>

@functions
{
    private sealed record TeamMember(
        string Name,
        string Initials,
        string PhotoColorClass,
        string Focus,
        string AuditsTrainings,
        IReadOnlyList<string> Education,
        IReadOnlyList<string> Experience,
        IReadOnlyList<string> Specializations,
        IReadOnlyList<string> Portfolio,
        string? LinkedInUrl = null);
}
