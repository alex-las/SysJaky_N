@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using Microsoft.Extensions.Localization
@using SysJaky_N.Extensions
@using SysJaky_N.Resources
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject IStringLocalizer<CompanyContactResources> CompanyContact
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.TwoLetterISOLanguageName ?? "cs";
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? string.Empty;
    var canAccessAdmin = User.IsInRole("Admin");
    var navigationItems = new (string Page, string ResourceKey)[]
    {
        ("/Index", "NavHome"),
        ("/About", "NavAbout"),
        ("/Services", "NavServices"),
        ("/Courses/Index", "NavCourses"),
        ("/CorporateInquiry", "NavCorporateInquiry")
    };
    bool IsCurrentPage(string page) => string.Equals(currentPage, page, System.StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["BrandName"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" />
    <meta name="theme-color" content="#0B4AE6" />
</head>
<body>
    <!-- Hlavní navigace -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" asp-page="/Index">
                <i class="bi bi-award-fill me-2"></i>
                @Localizer["BrandName"]
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
                    @foreach (var item in navigationItems)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(IsCurrentPage(item.Page) ? "active fw-semibold" : "")" 
                               asp-page="@item.Page">
                                @Localizer[item.ResourceKey]
                            </a>
                        </li>
                    }
                    
                    <!-- Přepínač jazyků (pouze CZ/EN, ne v Admin sekci) -->
                    <li class="nav-item dropdown ms-lg-3">
                        <a class="nav-link dropdown-toggle" href="#" role="button" 
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-globe2 me-1"></i>
                            @(currentCulture.ToUpper())
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item @(currentCulture == "cs" ? "active" : "")" 
                                   asp-route-culture="cs" asp-route-ui-culture="cs">
                                    <i class="bi bi-check-circle-fill me-2 @(currentCulture == "cs" ? "" : "invisible")"></i>
                                    Čeština
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(currentCulture == "en" ? "active" : "")" 
                                   asp-route-culture="en" asp-route-ui-culture="en">
                                    <i class="bi bi-check-circle-fill me-2 @(currentCulture == "en" ? "" : "invisible")"></i>
                                    English
                                </a>
                            </li>
                        </ul>
                    </li>
                    
                    @if (canAccessAdmin)
                    {
                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-sm btn-outline-primary" asp-page="/Admin/Dashboard/Index">
                                <i class="bi bi-speedometer2 me-1"></i>
                                Administrace
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hlavní obsah -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Patička -->
    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">@Localizer["BrandName"]</h5>
                    <p class="text-white-50">
                        @Localizer["FooterDescription"]
                    </p>
                </div>
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">@Localizer["FooterContactHeading"]</h5>
                    <ul class="list-unstyled text-white-50">
                        <li class="mb-2">
                            <i class="bi bi-envelope me-2"></i>
                            <a href="mailto:@CompanyContact["Email"]" class="text-white-50 text-decoration-none">
                                @CompanyContact["Email"]
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone me-2"></i>
                            <a href="tel:@CompanyContact["Phone"]" class="text-white-50 text-decoration-none">
                                @CompanyContact["Phone"]
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-geo-alt me-2"></i>
                            @CompanyContact["Address"]
                        </li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">@Localizer["FooterLinksHeading"]</h5>
                    <ul class="list-unstyled">
                        @foreach (var item in navigationItems)
                        {
                            <li class="mb-2">
                                <a asp-page="@item.Page" class="text-white-50 text-decoration-none">
                                    @Localizer[item.ResourceKey]
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <hr class="my-4 bg-white-50" />
            <div class="text-center text-white-50">
                <p class="mb-0">
                    &copy; @DateTime.Now.Year @Localizer["BrandName"]. @Localizer["FooterRights"]
                </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Alpine.js bez CSP problémů -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
