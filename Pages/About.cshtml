@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<section class="py-5">
    <div class="text-center mb-5">
        <span class="text-uppercase text-primary fw-semibold">@Localizer["CompanyBadge"]</span>
        <h1 class="display-5 fw-bold mt-3">@Localizer["CompanyHeading"]</h1>
        <p class="lead text-muted">@Localizer["CompanyLead"]</p>
    </div>

    <div class="row g-4 align-items-stretch">
        <div class="col-12 col-lg-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4 p-lg-5">
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="icon-circle-sm bg-primary-subtle text-primary">
                            <i class="bi bi-bullseye fs-3" aria-hidden="true"></i>
                        </div>
                        <h2 class="h4 mb-0">@Localizer["MissionHeading"]</h2>
                    </div>
                    <p class="mb-0">@Localizer["MissionDescription"]</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4 p-lg-5">
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="icon-circle-sm bg-primary-subtle text-primary">
                            <i class="bi bi-people-fill fs-3" aria-hidden="true"></i>
                        </div>
                        <h2 class="h4 mb-0">@Localizer["ServicesHeading"]</h2>
                    </div>
                    <ul class="list-unstyled mb-0 d-grid gap-2">
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceCertificationPreparation"]</span>
                        </li>
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceLabAccreditation"]</span>
                        </li>
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceTraining"]</span>
                        </li>
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceAudits"]</span>
                        </li>
                        <li class="d-flex align-items-start gap-2">
                            <i class="bi bi-check-circle-fill text-success mt-1" aria-hidden="true"></i>
                            <span>@Localizer["ServiceTailoredTraining"]</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("/Pages/Shared/_ServiceOverviewSnippets.cshtml")

<section class="py-5 bg-light rounded-4">
    <div class="container py-4">
        <div class="text-center mb-4">
            <div class="d-inline-flex align-items-center gap-2 px-3 py-1 bg-white shadow-sm rounded-pill">
                <i class="bi bi-stars text-warning" aria-hidden="true"></i>
                <span class="fw-semibold text-uppercase small">@Localizer["ExpertiseBadge"]</span>
            </div>
            <h2 class="mt-3">@Localizer["ExpertiseHeading"]</h2>
            <p class="text-muted mb-0">@Localizer["ExpertiseDescription"]</p>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-patch-check-fill text-primary fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["ISO9001Title"]</h3>
                    <p class="text-muted mb-0">@Localizer["ISO9001Description"]</p>
                </div>
            </div>
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-globe-europe-africa text-success fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["ISO14001Title"]</h3>
                    <p class="text-muted mb-0">@Localizer["ISO14001Description"]</p>
                </div>
            </div>
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-flask text-info fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["ISOIEC17025Title"]</h3>
                    <p class="text-muted mb-0">@Localizer["ISOIEC17025Description"]</p>
                </div>
            </div>
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-hospital text-danger fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["ISO15189Title"]</h3>
                    <p class="text-muted mb-0">@Localizer["ISO15189Description"]</p>
                </div>
            </div>
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-shield-check text-warning fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["HACCPTitle"]</h3>
                    <p class="text-muted mb-0">@Localizer["HACCPDescription"]</p>
                </div>
            </div>
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-exclamation-triangle-fill text-secondary fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["ISO45001Title"]</h3>
                    <p class="text-muted mb-0">@Localizer["ISO45001Description"]</p>
                </div>
            </div>
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-shield-lock-fill text-primary fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["ISO27001Title"]</h3>
                    <p class="text-muted mb-0">@Localizer["ISO27001Description"]</p>
                </div>
            </div>
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-gear-wide-connected text-dark fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["IATF16949Title"]</h3>
                    <p class="text-muted mb-0">@Localizer["IATF16949Description"]</p>
                </div>
            </div>
            <div class="col">
                <div class="h-100 p-4 bg-white rounded-3 shadow-sm text-center">
                    <i class="bi bi-heart-pulse-fill text-danger fs-1" aria-hidden="true"></i>
                    <h3 class="h5 mt-3">@Localizer["ISO13485Title"]</h3>
                    <p class="text-muted mb-0">@Localizer["ISO13485Description"]</p>
                </div>
            </div>
        </div>
    </div>
</section>
