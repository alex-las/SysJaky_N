@page "{id}"
@model SysJaky_N.Pages.Admin.Users.EditModel
@inject IStringLocalizer<SysJaky_N.Pages.Admin.Users.EditModel> Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<section class="admin-page-header">
    <div class="admin-page-header__title">
        <h1>@Localizer["PageTitle"]</h1>
    </div>
</section>

<form method="post" class="admin-card admin-form">
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Input.PhoneNumber" class="form-label"></label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
    </div>
    <div class="form-check mb-4">
        <input asp-for="Input.IsLocked" class="form-check-input" />
        <label asp-for="Input.IsLocked" class="form-check-label"></label>
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer["RolesLabel"]</label>
        @for (int i = 0; i < Model.Input.Roles.Count; i++)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="Input.Roles[i].Selected" />
                <label class="form-check-label">@Model.Input.Roles[i].Name</label>
                <input type="hidden" asp-for="Input.Roles[i].Name" />
            </div>
        }
    </div>
    <div class="admin-form-actions">
        <button type="submit" class="btn btn-admin-primary">@Localizer["SaveButton"]</button>
        <a asp-page="Index" class="btn btn-admin-ghost">@Localizer["BackButton"]</a>
    </div>
</form>
