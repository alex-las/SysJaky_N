@page
@using System.Globalization
@model IndexModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer T
@{
    ViewData["Title"] = T["Title"];
}

<!-- Hero sekce -->
<section class="hero-gradient py-5">
    <div class="container py-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="badge bg-primary-subtle text-primary px-3 py-2 mb-3">
                    @T["HeroBadge"]
                </div>
                <h1 class="display-4 fw-bold mb-4">
                    @T["HeroMainHeading"]
                </h1>
                <p class="lead text-muted mb-4">
                    @T["HeroSubheading"]
                </p>
                
                <!-- USP body -->
                <div class="d-flex flex-column gap-3 mb-4">
                    <div class="d-flex align-items-start gap-3">
                        <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        <div>
                            <strong>@T["HeroUSP1Title"]</strong>
                            <p class="mb-0 text-muted">@T["HeroUSP1Description"]</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start gap-3">
                        <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        <div>
                            <strong>@T["HeroUSP2Title"]</strong>
                            <p class="mb-0 text-muted">@T["HeroUSP2Description"]</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start gap-3">
                        <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        <div>
                            <strong>@T["HeroUSP3Title"]</strong>
                            <p class="mb-0 text-muted">@T["HeroUSP3Description"]</p>
                        </div>
                    </div>
                </div>
                
                <div class="row g-3 g-lg-4">
                    <div class="col-12">
                        <a asp-page="/CorporateInquiry/Qualification"
                           class="card border-0 shadow-sm h-100 text-decoration-none text-start transition-all">
                            <div class="card-body p-4">
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <span class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary-subtle text-primary" style="width: 48px; height: 48px;">
                                        <i class="bi bi-briefcase fs-4" aria-hidden="true"></i>
                                    </span>
                                    <h2 class="h4 fw-semibold mb-0">@T["HeroCorporateCardTitle"]</h2>
                                </div>
                                <p class="text-muted mb-4">@T["HeroCorporateCardDescription"]</p>
                                <span class="fw-semibold text-primary d-inline-flex align-items-center gap-2">
                                    @T["HeroCorporateCardCta"]
                                    <i class="bi bi-arrow-right-short fs-4" aria-hidden="true"></i>
                                </span>
                            </div>
                        </a>
                    </div>
                    <div class="col-12">
                        <a asp-page="/Courses/Index"
                           class="card border-0 shadow-sm h-100 text-decoration-none text-start transition-all">
                            <div class="card-body p-4">
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <span class="d-inline-flex align-items-center justify-content-center rounded-circle bg-success-subtle text-success" style="width: 48px; height: 48px;">
                                        <i class="bi bi-mortarboard fs-4" aria-hidden="true"></i>
                                    </span>
                                    <h2 class="h4 fw-semibold mb-0">@T["HeroCoursesCardTitle"]</h2>
                                </div>
                                <p class="text-muted mb-4">@T["HeroCoursesCardDescription"]</p>
                                <span class="fw-semibold text-success d-inline-flex align-items-center gap-2">
                                    @T["HeroCoursesCardCta"]
                                    <i class="bi bi-arrow-right-short fs-4" aria-hidden="true"></i>
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="position-relative">
                    <img src="~/img/hero-training.svg" alt="@T["HeroImageAlt"]"
                         class="img-fluid rounded-4 shadow-lg" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Nejbližší školení -->
<section class="py-5 bg-white border-bottom">
    <div class="container">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-end gap-4 mb-4">
            <div class="flex-grow-1">
                <h2 class="h3 fw-bold mb-2">@T["UpcomingTrainingsHeading"]</h2>
                <p class="text-muted mb-0">@T["UpcomingTrainingsDescription"]</p>
            </div>
            <div class="flex-shrink-0">
                <a asp-page="/Calendar/Index" class="btn btn-outline-primary">
                    <i class="bi bi-calendar-week me-2"></i>
                    @T["UpcomingTrainingsViewAll"]
                </a>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            @{
                var culture = CultureInfo.CurrentCulture;
            }

            @if (Model.FastSoonest?.Any() == true)
            {
                foreach (var course in Model.FastSoonest)
                {
                    var detailsUrl = Url.Page("/Courses/Details", new { id = course.Id }) ?? $"/Courses/Details/{course.Id}";
                    var dateDisplay = course.Date.ToString("d", culture);
                    var isoStandard = string.IsNullOrWhiteSpace(course.IsoStandard) ? null : course.IsoStandard;
                    var modeLabel = string.IsNullOrWhiteSpace(course.DeliveryForm)
                        ? T[$"UpcomingTrainingsMode_{course.Mode}"]?.Value ?? course.Mode.ToString()
                        : course.DeliveryForm;
                    var priceDisplay = course.Price > 0
                        ? course.Price.ToString("C", culture)
                        : T["UpcomingTrainingsPriceFree"].Value;
                    var description = string.IsNullOrWhiteSpace(course.Description)
                        ? null
                        : (course.Description!.Length > 160
                            ? course.Description.Substring(0, 160).TrimEnd() + "…"
                            : course.Description);
                <div class="col">
                    <article class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column gap-3 p-4">
                            <header class="d-flex flex-column gap-2">
                                <h3 class="h5 mb-0">@course.Title</h3>
                                @if (!string.IsNullOrWhiteSpace(description))
                                {
                                    <p class="text-muted small mb-0">@description</p>
                                }
                            </header>

                            <ul class="list-unstyled d-flex flex-column gap-2 small mb-0">
                                <li class="d-flex align-items-center gap-2">
                                    <i class="bi bi-calendar-event text-primary" aria-hidden="true"></i>
                                    <span class="fw-semibold text-dark">@T["UpcomingTrainingsDateLabel"]:</span>
                                    <span>@dateDisplay</span>
                                </li>
                                <li class="d-flex align-items-center gap-2">
                                    <i class="bi bi-geo text-primary" aria-hidden="true"></i>
                                    <span class="fw-semibold text-dark">@T["UpcomingTrainingsModeLabel"]:</span>
                                    <span>@modeLabel</span>
                                </li>
                                @if (!string.IsNullOrWhiteSpace(isoStandard))
                                {
                                    <li class="d-flex align-items-center gap-2">
                                        <i class="bi bi-diagram-3 text-primary" aria-hidden="true"></i>
                                        <span class="fw-semibold text-dark">@T["UpcomingTrainingsIsoLabel"]:</span>
                                        <span>@isoStandard</span>
                                    </li>
                                }
                                <li class="d-flex align-items-center gap-2">
                                    <i class="bi bi-currency-exchange text-primary" aria-hidden="true"></i>
                                    <span class="fw-semibold text-dark">@T["UpcomingTrainingsPriceLabel"]:</span>
                                    <span>@priceDisplay</span>
                                </li>
                            </ul>

                            <div class="mt-auto pt-2">
                                <a class="btn btn-sm btn-outline-primary" href="@detailsUrl">
                                    @T["UpcomingTrainingsCta"]
                                    <span class="visually-hidden">@course.Title</span>
                                </a>
                            </div>
                        </div>
                    </article>
                </div>
                }
            }
            else
            {
                <div class="col">
                    <div class="alert alert-light border-0 shadow-sm mb-0">
                        <div class="d-flex align-items-start gap-3">
                            <i class="bi bi-info-circle text-primary fs-4" aria-hidden="true"></i>
                            <div>
                                <h3 class="h6 fw-semibold mb-1">@T["UpcomingTrainingsHeading"]</h3>
                                <p class="mb-0">@T["UpcomingTrainingsEmpty"]</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Podporované normy ISO -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h3 fw-bold">@T["IsoStandardsHeading"]</h2>
            <p class="text-muted">@T["IsoStandardsDescription"]</p>
        </div>
        
        <div class="row g-4">
            <!-- ISO 9001 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-primary text-white me-3">
                                <i class="bi bi-award"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO 9001</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso9001Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO9001" 
                           class="btn btn-sm btn-outline-primary">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- ISO 14001 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-success text-white me-3">
                                <i class="bi bi-globe"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO 14001</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso14001Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO14001" 
                           class="btn btn-sm btn-outline-success">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- ISO/IEC 17025 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-info text-white me-3">
                                <i class="bi bi-flask"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO/IEC 17025</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso17025Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO17025" 
                           class="btn btn-sm btn-outline-info">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- HACCP -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-warning text-dark me-3">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <h3 class="h5 mb-0">HACCP</h3>
                        </div>
                        <p class="text-muted mb-3">@T["HaccpDescription"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="HACCP" 
                           class="btn btn-sm btn-outline-warning">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- ISO 45001 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-danger text-white me-3">
                                <i class="bi bi-heart-pulse"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO 45001</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso45001Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO45001" 
                           class="btn btn-sm btn-outline-danger">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- ISO 27001 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-dark text-white me-3">
                                <i class="bi bi-lock"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO 27001</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso27001Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO27001" 
                           class="btn btn-sm btn-outline-dark">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a asp-page="/Services" class="btn btn-outline-primary">
                @T["ViewAllStandards"]
            </a>
        </div>
    </div>
</section>

<!-- Jak to funguje -->
