@page
@model SysJaky_N.Pages.Admin.Newsletters.Templates.CreateModel

<h1 class="mb-4">Nová šablona newsletteru</h1>

<form method="post" class="card card-body">
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Input.Name" class="form-label"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.PrimaryColor" class="form-label"></label>
            <input asp-for="Input.PrimaryColor" class="form-control" />
            <span asp-validation-for="Input.PrimaryColor" class="text-danger"></span>
        </div>
    </div>
    <div class="row g-3 mt-0 mt-md-3">
        <div class="col-md-6">
            <label asp-for="Input.SecondaryColor" class="form-label"></label>
            <input asp-for="Input.SecondaryColor" class="form-control" />
            <span asp-validation-for="Input.SecondaryColor" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.BackgroundColor" class="form-label"></label>
            <input asp-for="Input.BackgroundColor" class="form-control" />
            <span asp-validation-for="Input.BackgroundColor" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <label asp-for="Input.BaseLayoutHtml" class="form-label"></label>
        <textarea asp-for="Input.BaseLayoutHtml" class="form-control" rows="12"></textarea>
        <div class="form-text">Použijte zástupný text <code>{{BODY}}</code> pro vložení obsahu newsletteru.</div>
        <span asp-validation-for="Input.BaseLayoutHtml" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Vytvořit šablonu</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Zpět</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
