@page
@model SysJaky_N.Pages.Admin.Users.IndexModel
@inject IStringLocalizer<SysJaky_N.Pages.Admin.Users.IndexModel> Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1>@Localizer["PageTitle"]</h1>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success" role="alert">@statusMessage</div>
}

<form method="get" class="mb-3" role="search" aria-label="@Localizer["SearchFormAriaLabel"]">
    <input type="text" name="Search" value="@Model.Search" placeholder="@Localizer["SearchPlaceholder"]" aria-label="@Localizer["SearchPlaceholder"]" />
    <button type="submit">@Localizer["SearchButton"]</button>
</form>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>@Localizer["EmailColumn"]</th>
                <th>@Localizer["PhoneColumn"]</th>
                <th>@Localizer["RolesColumn"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td><input type="checkbox" name="SelectedUserIds" value="@user.Id" /></td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@user.Id">@Localizer["EditLink"]</a> |
                    <a asp-page="Delete" asp-route-id="@user.Id">@Localizer["DeleteLink"]</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="mb-3">
        <select name="RoleName">
            <option value="">@Localizer["SelectRolePlaceholder"]</option>
            @foreach (var role in Model.AllRoles)
            {
                <option value="@role">@role</option>
            }
        </select>
        <button formaction="?handler=AssignRole" type="submit">@Localizer["AssignRoleButton"]</button>
        <button formaction="?handler=RemoveRole" type="submit">@Localizer["RemoveRoleButton"]</button>
        <button formaction="?handler=Block" type="submit">@Localizer["BlockButton"]</button>
        <button formaction="?handler=Unblock" type="submit">@Localizer["UnblockButton"]</button>
    </div>
</form>

<div role="navigation" aria-label="@Localizer["PaginationAriaLabel"]" class="d-flex gap-2">
    @for (var i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.PageIndex)
        {
            <span>@i</span>
        }
        else
        {
            <a asp-page="./Index" asp-route-pageIndex="@i" asp-route-search="@Model.Search">@i</a>
        }
    }
</div>
