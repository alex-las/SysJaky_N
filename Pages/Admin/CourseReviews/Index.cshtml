@page
@model SysJaky_N.Pages.Admin.CourseReviews.IndexModel
@{
    ViewData["Title"] = "Hodnocení kurzů";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
    <h1 class="mb-0">Hodnocení kurzů</h1>
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success" role="status">
        @Model.StatusMessage
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Průměrné hodnocení</h5>
                <p class="display-6 mb-0">
                    @(Model.AverageRating.HasValue ? Model.AverageRating.Value.ToString("0.0") : "–")
                </p>
                <small class="text-muted">Z @Model.TotalReviewsCount recenzí</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Čeká na schválení</h5>
                <p class="display-6 mb-0">@Model.PendingReviewsCount</p>
                <small class="text-muted">Nezveřejněné recenze</small>
            </div>
        </div>
    </div>
</div>

<form method="get" class="row g-3 align-items-end mb-4">
    <div class="col-md-4">
        <label asp-for="CourseSearch" class="form-label">Kurz</label>
        <input asp-for="CourseSearch" class="form-control" placeholder="Název kurzu" />
    </div>
    <div class="col-md-3">
        <label asp-for="UserSearch" class="form-label">Uživatel</label>
        <input asp-for="UserSearch" class="form-control" placeholder="Jméno nebo e-mail" />
    </div>
    <div class="col-md-2">
        <label asp-for="RatingSearch" class="form-label">Hodnocení</label>
        <select asp-for="RatingSearch" class="form-select">
            <option value="">Vše</option>
            @for (var rating = 5; rating >= 1; rating--)
            {
                <option value="@rating" selected="@(Model.RatingSearch == rating ? "selected" : null)">@rating</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <label asp-for="IsPublicFilter" class="form-label">Stav</label>
        <select asp-for="IsPublicFilter" class="form-select">
            <option value="">Vše</option>
            <option value="true">Zveřejněné</option>
            <option value="false">Nezveřejněné</option>
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Filtrovat</button>
    </div>
    <div class="col-auto">
        <a asp-page="Index" class="btn btn-outline-secondary">Vymazat</a>
    </div>
</form>

@if (Model.Reviews.Count == 0)
{
    <div class="alert alert-info" role="status">
        Nebyly nalezeny žádné recenze podle zadaných kritérií.
    </div>
}
else
{
    <form method="post" class="mb-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="CourseSearch" value="@Model.CourseSearch" />
        <input type="hidden" name="UserSearch" value="@Model.UserSearch" />
        <input type="hidden" name="RatingSearch" value="@(Model.RatingSearch?.ToString() ?? string.Empty)" />
        <input type="hidden" name="IsPublicFilter" value="@(Model.IsPublicFilter?.ToString()?.ToLowerInvariant() ?? string.Empty)" />

        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">
                            <input class="form-check-input" type="checkbox" id="select-all" />
                        </th>
                        <th scope="col">Kurz</th>
                        <th scope="col">Uživatel</th>
                        <th scope="col" class="text-center">Hodnocení</th>
                        <th scope="col">Komentář</th>
                        <th scope="col">Vytvořeno</th>
                        <th scope="col">Stav</th>
                        <th scope="col">Publikováno</th>
                        <th scope="col" class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var review in Model.Reviews)
                {
                    <tr>
                        <td class="text-center">
                            <input class="form-check-input review-checkbox" type="checkbox" name="SelectedReviewIds" value="@review.Id" />
                        </td>
                        <td>@review.Course?.Title</td>
                        <td>
                            @if (review.User is not null)
                            {
                                <div>@review.User.UserName</div>
                                <small class="text-muted">@review.User.Email</small>
                            }
                        </td>
                        <td class="text-center fw-semibold">@review.Rating</td>
                        <td>@review.Comment</td>
                        <td>@review.CreatedAt.ToString("g")</td>
                        <td>
                            @if (review.IsPublic)
                            {
                                <span class="badge bg-success">Zveřejněno</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Skryto</span>
                            }
                        </td>
                        <td>
                            @(review.PublishedAtUtc.HasValue ? review.PublishedAtUtc.Value.ToLocalTime().ToString("g") : "–")
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <button type="submit" class="btn btn-outline-success btn-sm" name="id" value="@review.Id" formaction="@Url.Page(null, new { handler = "TogglePublish", publish = true })">Schválit</button>
                                <button type="submit" class="btn btn-outline-secondary btn-sm" name="id" value="@review.Id" formaction="@Url.Page(null, new { handler = "TogglePublish", publish = false })">Skrýt</button>
                                <button type="submit" class="btn btn-outline-danger btn-sm" name="id" value="@review.Id" formaction="@Url.Page(null, new { handler = "Delete" })" onclick="return confirm('Opravdu chcete smazat tuto recenzi?');">Smazat</button>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="d-flex flex-wrap gap-2 mt-3">
            <button type="submit" class="btn btn-success" formaction="@Url.Page(null, new { handler = "BulkSetPublication", publish = true })">Hromadně schválit</button>
            <button type="submit" class="btn btn-outline-secondary" formaction="@Url.Page(null, new { handler = "BulkSetPublication", publish = false })">Hromadně skrýt</button>
            <button type="submit" class="btn btn-outline-danger" formaction="@Url.Page(null, new { handler = "BulkDelete" })" onclick="return confirm('Opravdu chcete smazat vybrané recenze?');">Smazat vybrané</button>
        </div>
    </form>
}

<script>
    (function () {
        const selectAll = document.getElementById('select-all');
        if (!selectAll) {
            return;
        }

        selectAll.addEventListener('change', function () {
            document.querySelectorAll('.review-checkbox').forEach(cb => {
                cb.checked = selectAll.checked;
            });
        });
    })();
</script>
