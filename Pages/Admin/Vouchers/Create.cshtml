@page
@using SysJaky_N.Models
@model SysJaky_N.Pages.Admin.Vouchers.CreateModel
@{
    ViewData["Title"] = "Vytvořit voucher";
}

<h1>Vytvořit voucher</h1>

<form method="post" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="_VoucherForm" model="new SysJaky_N.Pages.Admin.Vouchers.VoucherFormModel(Model.Voucher, Model.Courses)" />

    <div class="mt-4">
        <partial name="~/Pages/Shared/_FormActions.cshtml" model='new SysJaky_N.Pages.Admin.Shared.FormActionsModel { SubmitText = "Vytvořit", CancelText = "Zpět na přehled" }' />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
