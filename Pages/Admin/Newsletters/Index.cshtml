@section Scripts {
    <script src="~/js/admin-newsletter-editor.js" asp-append-version="true"></script>
    <script>
        (function () {
            const container = document.getElementById('IssueTemplateRegions');
            const templateSelect = document.getElementById('IssueTemplate');
            if (!container || !templateSelect) {
                return;
            }

            const templates = JSON.parse(container.dataset.templates ?? '[]');
            const sectionsByCategory = JSON.parse(container.dataset.sections ?? '{}');
            const initialSelections = JSON.parse(container.dataset.selections ?? '[]');
            const selectionMap = new Map(initialSelections.map(item => [item.templateRegionId, new Set(item.selectedSectionIds ?? [])]));

            function renderRegions() {
                const templateId = Number(templateSelect.value);
                container.innerHTML = '';

                if (!templateId) {
                    const message = document.createElement('p');
                    message.className = 'text-muted mb-0';
                    message.textContent = 'Vyberte šablonu pro zobrazení dostupných oblastí.';
                    container.appendChild(message);
                    return;
                }

                const template = templates.find(t => t.id === templateId);
                if (!template) {
                    return;
                }

                template.regions.forEach((region, index) => {
                    const card = document.createElement('div');
                    card.className = 'card card-body mb-3';

                    const title = document.createElement('h3');
                    title.className = 'h6 card-title';
                    title.textContent = region.name + (region.categoryName ? ` (${region.categoryName})` : '');
                    card.appendChild(title);

                    const hidden = document.createElement('input');
                    hidden.type = 'hidden';
                    hidden.name = `Regions[${index}].TemplateRegionId`;
                    hidden.value = region.id;
                    card.appendChild(hidden);

                    const label = document.createElement('label');
                    label.className = 'form-label';
                    label.setAttribute('for', `Region_${region.id}_Sections`);
                    label.textContent = 'Sekce';
                    card.appendChild(label);

                    const select = document.createElement('select');
                    select.className = 'form-select';
                    select.id = `Region_${region.id}_Sections`;
                    select.name = `Regions[${index}].SelectedSectionIds`;
                    select.multiple = true;
                    select.size = 6;

                    const sections = sectionsByCategory[region.categoryId]?.sections ?? [];
                    const selectedIds = selectionMap.get(region.id) ?? new Set();

                    sections.forEach(section => {
                        const option = document.createElement('option');
                        option.value = section.id;
                        option.textContent = section.title;
                        if (selectedIds.has(section.id)) {
                            option.selected = true;
                        }
                        select.appendChild(option);
                    });

                    card.appendChild(select);

                    const hint = document.createElement('small');
                    hint.className = 'text-muted';
                    hint.textContent = sections.length === 0
                        ? 'Pro tuto oblast nejsou dostupné žádné publikované sekce.'
                        : 'Vyberte sekce, které chcete do newsletteru zahrnout, nebo oblast ponechte prázdnou.';
                    card.appendChild(hint);

                    container.appendChild(card);
                });

                if (template.regions.length === 0) {
                    const message = document.createElement('p');
                    message.className = 'text-muted mb-0';
                    message.textContent = 'Vybraná šablona zatím neobsahuje žádné oblasti.';
                    container.appendChild(message);
                }
            }

            templateSelect.addEventListener('change', () => {
                selectionMap.clear();
                renderRegions();
            });

            renderRegions();
        })();
    </script>
}
