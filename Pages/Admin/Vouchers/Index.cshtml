@page
@using System.Linq
@model SysJaky_N.Pages.Admin.Vouchers.IndexModel
@using SysJaky_N.Models
@{
    ViewData["Title"] = "Vouchery";
}

<h1>Vouchery</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Vytvořit nový</a>
</p>

@if (!Model.Vouchers.Any())
{
    <div class="alert alert-info" role="status">Žádné vouchery nejsou k dispozici.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Kód</th>
            <th>Typ</th>
            <th>Hodnota</th>
            <th>Platnost</th>
            <th>Max. uplatnění</th>
            <th>Využito</th>
            <th>Platí pro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Vouchers)
    {
        <tr>
            <td>@item.Code</td>
            <td>@(item.Type switch
                {
                    VoucherType.Percentage => "Procentuální sleva",
                    VoucherType.FixedAmount => "Fixní částka",
                    _ => item.Type.ToString()
                })</td>
            <td>
                @if (item.Type == VoucherType.Percentage)
                {
                    @string.Format("{0:0.##}%", item.Value)
                }
                else
                {
                    @item.Value.ToString("C")
                }
            </td>
            <td>
                @if (item.ExpiresUtc.HasValue)
                {
                    @DateTime.SpecifyKind(item.ExpiresUtc.Value, DateTimeKind.Utc).ToLocalTime().ToString("g")
                }
                else
                {
                    @:Nikdy
                }
            </td>
            <td>@(item.MaxRedemptions?.ToString() ?? "Bez omezení")</td>
            <td>@item.UsedCount</td>
            <td>@item.AppliesToCourse?.Title ?? "Všechny kurzy"</td>
            <td>
                <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@item.Id">Upravit</a>
                <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@item.Id">Smazat</a>
            </td>
        </tr>
    }
    </tbody>
        </table>
    </div>
}
