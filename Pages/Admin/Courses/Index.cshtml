@using System.Linq

@page
@model SysJaky_N.Pages.Admin.Courses.IndexModel
@{
    ViewData["Title"] = "Kurzy";
}

<section class="admin-page-header">
    <div class="admin-page-header__title">
        <h1>Kurzy</h1>
    </div>
    <div class="admin-page-header__actions">
        <a class="btn btn-admin-primary" asp-page="/Courses/Create">Vytvořit kurz</a>
    </div>
</section>

<form method="get" class="admin-card" role="search" aria-label="Filtr kurzů">
    <div class="admin-filters">
        <div class="flex-grow-1">
            <label class="form-label visually-hidden" for="searchString">Hledat...</label>
            <input id="searchString" type="text" asp-for="SearchString" placeholder="Hledat..." class="form-control" aria-label="Hledat kurzy" />
        </div>
        <div>
            <label class="form-label visually-hidden" for="courseCategory">Filtrovat podle kategorie</label>
            <select id="courseCategory" asp-for="CategoryId" asp-items="Model.CourseCategories" class="form-select" aria-label="Filtrovat podle kategorie">
                <option value="">Všechny kategorie</option>
            </select>
        </div>
    </div>
    <div class="admin-form-actions">
        <button type="submit" class="btn btn-admin-primary">Filtrovat</button>
        <a class="btn btn-admin-ghost" asp-page="/Admin/Courses/Index">Resetovat</a>
    </div>
</form>

<div class="admin-table-wrapper table-responsive mt-4">
    <table class="table admin-table align-middle mb-0">
        <thead>
            <tr>
                <th scope="col">Název</th>
                <th scope="col">Kategorie</th>
                <th scope="col">Cena</th>
                <th scope="col">Datum</th>
                <th scope="col" class="text-end"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Courses)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    @if (item.Categories?.Count > 0)
                    {
                        var categories = item.Categories
                            .OrderBy(category => category.SortOrder)
                            .ThenBy(category => category.Name)
                            .Select(category => category.Name);
                        <span>@string.Join(", ", categories)</span>
                    }
                </td>
                <td>@item.Price</td>
                <td>@item.Date.ToString("d")</td>
                <td class="text-end">
                    <div class="admin-table-actions justify-content-end">
                        <a class="btn btn-sm btn-admin-ghost" asp-page="/Courses/Edit" asp-route-id="@item.Id">Upravit</a>
                        <a class="btn btn-sm btn-admin-warning" asp-page="/Courses/Delete" asp-route-id="@item.Id">Smazat</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Stránkování kurzů" class="admin-pagination">
        <ul class="pagination admin-pagination">
            <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                <a class="page-link" asp-route-PageNumber="@(Model.PageNumber - 1)" asp-route-CategoryId="@Model.CategoryId" asp-route-SearchString="@Model.SearchString">Předchozí</a>
            </li>
            <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-route-PageNumber="@(Model.PageNumber + 1)" asp-route-CategoryId="@Model.CategoryId" asp-route-SearchString="@Model.SearchString">Další</a>
            </li>
        </ul>
    </nav>
}

