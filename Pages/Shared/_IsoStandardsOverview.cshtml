@using System.Linq
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject SysJaky_N.Services.IsoStandards.IIsoSpecializationMetadataProvider IsoMetadataProvider

@{
    var standards = IsoMetadataProvider
        .GetAll()
        .Where(standard => standard.IncludeInOverview)
        .ToList();
}

<section class="iso-standards py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">@Localizer["Heading"]</h2>
            <p class="text-muted mb-0">@Localizer["Description"]</p>
        </div>
        <div class="row g-4">
            @foreach (var standard in standards)
            {
                <div class="col-12 col-md-6 col-xl-3 d-flex">
                    <article class="standard-card @standard.IconColorClass w-100 h-100">
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <span class="standard-icon">
                                <i class="bi @standard.OverviewIconClass" aria-hidden="true"></i>
                            </span>
                            <h3 class="h5 mb-0">@standard.Name</h3>
                        </div>
                        <p class="text-muted flex-grow-1">@standard.Details</p>
                        <div class="mt-3">
                            <h4 class="h6 text-uppercase fw-semibold mb-2">@Localizer["RecommendedCoursesHeading"]</h4>
                            <ul class="standard-links list-unstyled mb-0">
                                @foreach (var course in standard.Courses)
                                {
                                    <li>
                                        <a class="standard-link" href="@course.Url">
                                            <span class="standard-link__label">@course.Name</span>
                                            <i class="bi bi-arrow-up-right standard-link__icon" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>
