@page
@model IndexModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer T
@{
    ViewData["Title"] = T["Title"];
}

<!-- Hero sekce -->
<section class="hero-gradient py-5">
    <div class="container py-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-7">
                <div class="badge bg-primary-subtle text-primary px-3 py-2 mb-3">
                    @T["HeroBadge"]
                </div>
                <h1 class="display-4 fw-bold mb-4">
                    @T["HeroMainHeading"]
                </h1>
                <p class="lead text-muted mb-4">
                    @T["HeroSubheading"]
                </p>
                
                <!-- USP body -->
                <div class="d-flex flex-column gap-3 mb-4">
                    <div class="d-flex align-items-start gap-3">
                        <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        <div>
                            <strong>@T["HeroUSP1Title"]</strong>
                            <p class="mb-0 text-muted">@T["HeroUSP1Description"]</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start gap-3">
                        <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        <div>
                            <strong>@T["HeroUSP2Title"]</strong>
                            <p class="mb-0 text-muted">@T["HeroUSP2Description"]</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start gap-3">
                        <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        <div>
                            <strong>@T["HeroUSP3Title"]</strong>
                            <p class="mb-0 text-muted">@T["HeroUSP3Description"]</p>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex flex-column flex-sm-row gap-3">
                    <a asp-page="/Courses/Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-mortarboard me-2"></i>
                        @T["HeroPrimaryCTA"]
                    </a>
                    <a asp-page="/CorporateInquiry" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-briefcase me-2"></i>
                        @T["HeroSecondaryCTA"]
                    </a>
                </div>
            </div>
            
            <div class="col-lg-5">
                <div class="position-relative">
                    <img src="~/img/hero-training.svg" alt="@T["HeroImageAlt"]" 
                         class="img-fluid rounded-4 shadow-lg" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- PodporovanÃ© normy ISO -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h3 fw-bold">@T["IsoStandardsHeading"]</h2>
            <p class="text-muted">@T["IsoStandardsDescription"]</p>
        </div>
        
        <div class="row g-4">
            <!-- ISO 9001 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-primary text-white me-3">
                                <i class="bi bi-award"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO 9001</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso9001Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO9001" 
                           class="btn btn-sm btn-outline-primary">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- ISO 14001 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-success text-white me-3">
                                <i class="bi bi-globe"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO 14001</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso14001Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO14001" 
                           class="btn btn-sm btn-outline-success">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- ISO/IEC 17025 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-info text-white me-3">
                                <i class="bi bi-flask"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO/IEC 17025</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso17025Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO17025" 
                           class="btn btn-sm btn-outline-info">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- HACCP -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-warning text-dark me-3">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <h3 class="h5 mb-0">HACCP</h3>
                        </div>
                        <p class="text-muted mb-3">@T["HaccpDescription"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="HACCP" 
                           class="btn btn-sm btn-outline-warning">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- ISO 45001 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-danger text-white me-3">
                                <i class="bi bi-heart-pulse"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO 45001</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso45001Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO45001" 
                           class="btn btn-sm btn-outline-danger">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- ISO 27001 -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-box bg-dark text-white me-3">
                                <i class="bi bi-lock"></i>
                            </div>
                            <h3 class="h5 mb-0">ISO 27001</h3>
                        </div>
                        <p class="text-muted mb-3">@T["Iso27001Description"]</p>
                        <a asp-page="/Courses/Index" asp-route-standard="ISO27001" 
                           class="btn btn-sm btn-outline-dark">
                            @T["ViewCoursesLink"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a asp-page="/Services" class="btn btn-outline-primary">
                @T["ViewAllStandards"]
            </a>
        </div>
    </div>
</section>

<!-- Jak to funguje -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h3 fw-bold">@T["ProcessHeading"]</h2>
            <p class="text-muted">@T["ProcessDescription"]</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="process-step-number mx-auto mb-3">1</div>
                    <h3 class="h5 fw-semibold">@T["ProcessStep1Title"]</h3>
                    <p class="text-muted">@T["ProcessStep1Description"]</p>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="process-step-number mx-auto mb-3">2</div>
                    <h3 class="h5 fw-semibold">@T["ProcessStep2Title"]</h3>
                    <p class="text-muted">@T["ProcessStep2Description"]</p>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="process-step-number mx-auto mb-3">3</div>
                    <h3 class="h5 fw-semibold">@T["ProcessStep3Title"]</h3>
                    <p class="text-muted">@T["ProcessStep3Description"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA sekce -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-8">
                <h2 class="h3 fw-bold mb-3">@T["CtaHeading"]</h2>
                <p class="mb-0 opacity-90">@T["CtaDescription"]</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a asp-page="/CorporateInquiry" class="btn btn-light btn-lg">
                    <i class="bi bi-envelope me-2"></i>
                    @T["CtaButton"]
                </a>
            </div>
        </div>
    </div>
</section>

<style>
.hero-gradient {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.icon-box {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    font-size: 1.5rem;
}

.process-step-number {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-size: 2rem;
    font-weight: bold;
    border-radius: 50%;
}

.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
}
</style>
