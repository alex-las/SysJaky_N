@page
@model SysJaky_N.Pages.Admin.Companies.IndexModel
@inject IStringLocalizer<SysJaky_N.Pages.Admin.Companies.IndexModel> Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}
<h1>@Localizer["PageTitle"]</h1>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success" role="alert">@statusMessage</div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="NewCompany.Name"></label>
        <input asp-for="NewCompany.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="NewCompany.ReferenceCode"></label>
        <input asp-for="NewCompany.ReferenceCode" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="NewCompany.ManagerId"></label>
        <input asp-for="NewCompany.ManagerId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["CreateButton"]</button>
</form>

<table class="table mt-3">
    <thead>
        <tr><th>@Localizer["TableHeaderName"]</th><th>@Localizer["TableHeaderReferenceCode"]</th><th>@Localizer["TableHeaderManager"]</th></tr>
    </thead>
    <tbody>
    @foreach (var company in Model.Companies)
    {
        <tr>
            <td>@company.Name</td>
            <td>@company.ReferenceCode</td>
            <td>@company.Manager?.Email</td>
        </tr>
    }
    </tbody>
</table>
