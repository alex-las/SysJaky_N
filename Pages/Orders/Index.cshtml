@page
@model SysJaky_N.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.CreatedAt.ToString("g")</td>
            <td>@order.Status</td>
            <td>@order.Total</td>
            <td>
                <a asp-page="Details" asp-route-id="@order.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
