@model SysJaky_N.Models.Article

<div class="form-group admin-article-editor">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Content"></label>
    <div class="editor-toolbar d-flex justify-content-between align-items-center mb-2">
        <small class="text-muted">Použijte nástrojovou lištu pro formátování obsahu.</small>
        <button type="button"
                class="btn btn-outline-secondary btn-sm"
                data-editor-preview-toggle
                data-label-show="Zobrazit náhled"
                data-label-hide="Skrýt náhled"
                aria-expanded="false">
            Zobrazit náhled
        </button>
    </div>
    <div class="border rounded" data-editor-container></div>
    <textarea asp-for="Content"
              class="form-control"
              data-editor-textarea></textarea>
    <div class="mt-3" data-editor-preview hidden aria-live="polite"></div>
    <span asp-validation-for="Content" class="text-danger"></span>
</div>
<div class="form-check form-switch mb-3">
    <input asp-for="IsPublished" class="form-check-input" role="switch" />
    <label class="form-check-label" asp-for="IsPublished"></label>
    <span asp-validation-for="IsPublished" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PublishedAtUtc"></label>
    <input asp-for="PublishedAtUtc" type="datetime-local" class="form-control" />
    <span class="form-text text-muted">Zadejte datum publikace (UTC). Pokud ponecháte prázdné, použije se aktuální čas při publikaci.</span>
    <span asp-validation-for="PublishedAtUtc" class="text-danger"></span>
</div>
