@{
    var faqItems = new[]
    {
        new { Id = 1, Question = "Jak rychle mohu spustit první interní audit?", Answer = "Nejčastěji doporučujeme pilotní audit do 30 dnů od zahájení spolupráce. Rádi vám poskytneme připravené checklisty i mentoring pro auditorský tým." },
        new { Id = 2, Question = "Musím mít speciální software?", Answer = "Ne. Většina klientů začíná s jednoduchým sdíleným úložištěm a tabulkami. Pokud budete potřebovat komplexnější řešení, pomůžeme s výběrem i implementací." },
        new { Id = 3, Question = "Co když nemáme interní kapacity?", Answer = "Na začátku umíme procesy nastavit s vámi a postupně je předat interním pracovníkům. Nabízíme také dlouhodobý dohled a mentoring, dokud si nebudete jistí samostatným provozem." }
    };
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="mx-auto max-w-3xl" x-data="{ activeItem: null }">
            <div class="text-center mb-4">
                <span class="text-primary text-uppercase fw-semibold">Nejčastější dotazy</span>
                <h2 class="h3 mt-2">Co klienty zajímá nejvíce?</h2>
                <p class="text-muted mb-0">Krátké odpovědi pro rychlou orientaci. Kliknutím zobrazíte další detaily.</p>
            </div>

            <div class="d-grid gap-3">
                @foreach (var item in faqItems)
                {
                    <article class="bg-white border rounded-3 shadow-sm" x-data="{ id: @item.Id }">
                        <button type="button"
                                class="w-100 text-start px-4 py-3 bg-transparent border-0 d-flex justify-content-between align-items-center gap-3"
                                :aria-expanded="activeItem === id"
                                x-on:click="activeItem = activeItem === id ? null : id">
                            <span class="fw-semibold">@item.Question</span>
                            <span class="badge rounded-pill"
                                  :class="activeItem === id ? 'bg-primary text-white' : 'bg-secondary-subtle text-secondary'">
                                <i class="bi" :class="activeItem === id ? 'bi-dash-lg' : 'bi-plus-lg'" aria-hidden="true"></i>
                                <span class="visually-hidden">@("Toggle" + item.Id)</span>
                            </span>
                        </button>
                        <div class="px-4 pb-4" x-cloak x-show="activeItem === id" x-transition.opacity x-transition.duration.300ms>
                            <p class="mb-0 text-muted">@item.Answer</p>
                        </div>
                    </article>
                }
            </div>
        </div>
    </div>
</section>
