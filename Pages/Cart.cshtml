@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SysJaky_N.Pages.CartModel
@{
    ViewData["Title"] = Localizer["Title"];
}

<h1>@Localizer["Title"]</h1>

@if (TempData["CartError"] is string cartError && !string.IsNullOrWhiteSpace(cartError))
{
    <div class="alert alert-danger" role="alert">@cartError</div>
}

@if (Model.Items.Count == 0)
{
    <p>@Localizer["Empty"]</p>
}
else
{
    <table class="table" role="table">
        <caption class="visually-hidden">@Localizer["CartTableCaption"]</caption>
        <thead>
            <tr>
                <th scope="col">@Localizer["CourseHeader"]</th>
                <th scope="col">@Localizer["QuantityHeader"]</th>
                <th scope="col">@Localizer["PriceHeader"]</th>
                <th scope="col">@Localizer["TotalHeader"]</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Course.Title</td>
                <td>@item.Quantity</td>
                <td>@item.Course.Price</td>
                <td>@(item.Course.Price * item.Quantity)</td>
            </tr>
        }
        </tbody>
    </table>
    @if (Model.BundleOffers.Any())
    {
        <h2 class="h4">@Localizer["BundleOffers"]</h2>
        @foreach (var block in Model.BundleOffers)
        {
            var normal = block.Modules.Sum(m => m.Price);
            <p>@Localizer["BundleDescription", block.Title, block.Price, normal - block.Price]</p>
            <form method="post" asp-page-handler="ApplyBundle" class="d-inline" aria-label="@Localizer["ApplyBundleAria", block.Title]">
                <input type="hidden" name="blockId" value="@block.Id" />
                <button type="submit" class="btn btn-warning btn-sm">@Localizer["ApplyBundle"]</button>
            </form>
        }
    }
    @if (Model.AppliedBundles.Any())
    {
        <h3>@Localizer["AppliedBundles"]</h3>
        <ul>
        @foreach (var block in Model.AppliedBundles)
        {
            <li>@block.Title - @block.Price</li>
        }
        </ul>
    }
    <form method="post" asp-page-handler="ApplyVoucher" class="row g-2 align-items-end" aria-label="@Localizer["VoucherFormLabel"]">
        <div class="col-12 col-md-auto">
            <label class="form-label visually-hidden" for="voucherCode">@Localizer["VoucherCodeLabel"]</label>
            <input type="text" id="voucherCode" name="code" class="form-control" placeholder='@Localizer["VoucherPlaceholder"]' aria-describedby="voucherCodeHelp" />
            <div id="voucherCodeHelp" class="visually-hidden">@Localizer["VoucherHelpText"]</div>
        </div>
        <div class="col-12 col-md-auto">
            <button type="submit" class="btn btn-primary">@Localizer["Apply"]</button>
        </div>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <span class="text-danger" role="alert">@Model.ErrorMessage</span>
        }
    </form>
    @if (Model.AppliedVoucher != null)
    {
        <p>@Localizer["VoucherApplied", Model.AppliedVoucher.Code, Model.DiscountAmount]</p>
    }
    <p>@Localizer["TotalLine", Model.Total]</p>
    <form method="post" asp-page-handler="Checkout" class="mt-3" aria-label="@Localizer["CheckoutFormLabel"]">
        <button type="submit" class="btn btn-primary">@Localizer["CreateOrder"]</button>
    </form>
}
