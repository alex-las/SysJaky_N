@model SysJaky_N.Pages.Admin.CourseCategories.CourseCategoryEditorModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<div class="mb-3">
    <label asp-for="Category.Name" class="form-label">@Localizer["NameLabel"]</label>
    <input asp-for="Category.Name" class="form-control" />
    <span asp-validation-for="Category.Name" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Category.Slug" class="form-label">@Localizer["SlugLabel"]</label>
    <input asp-for="Category.Slug" class="form-control" />
    <div class="form-text">@Localizer["SlugHelp"]</div>
    <span asp-validation-for="Category.Slug" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Category.Description" class="form-label">@Localizer["DescriptionLabel"]</label>
    <textarea asp-for="Category.Description" class="form-control" rows="3"></textarea>
    <div class="form-text">@Localizer["DescriptionHelp"]</div>
    <span asp-validation-for="Category.Description" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Category.SortOrder" class="form-label">@Localizer["SortOrderLabel"]</label>
    <input asp-for="Category.SortOrder" type="number" class="form-control" min="0" step="1" />
    <div class="form-text">@Localizer["SortOrderHelp"]</div>
    <span asp-validation-for="Category.SortOrder" class="text-danger"></span>
</div>
<div class="form-check mb-4">
    <input asp-for="Category.IsActive" class="form-check-input" />
    <label asp-for="Category.IsActive" class="form-check-label">@Localizer["IsActiveLabel"]</label>
    <div class="form-text">@Localizer["IsActiveHelp"]</div>
    <span asp-validation-for="Category.IsActive" class="text-danger"></span>
</div>

<div class="mb-4">
    <h2 class="h5 mb-2">@Localizer["TranslationsHeading"]</h2>
    <p class="form-text mb-0">@Localizer["TranslationsHelp"]</p>
</div>

@for (var i = 0; i < Model.Translations.Count; i++)
{
    var locale = Model.Translations[i].Locale;
    var localeLabel = Localizer[$"Locale_{locale}"].Value ?? locale;
    <fieldset class="border rounded-3 p-3 mb-4">
        <legend class="float-none w-auto px-2 h6">@Localizer["TranslationLegend", localeLabel]</legend>
        <input type="hidden" asp-for="Translations[i].Locale" />
        <div class="mb-3">
            <label asp-for="Translations[i].Name" class="form-label">@Localizer["TranslationNameLabel", localeLabel]</label>
            <input asp-for="Translations[i].Name" class="form-control" />
            <span asp-validation-for="Translations[i].Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Translations[i].Slug" class="form-label">@Localizer["TranslationSlugLabel", localeLabel]</label>
            <input asp-for="Translations[i].Slug" class="form-control" />
            <div class="form-text">@Localizer["TranslationSlugHelp", localeLabel]</div>
            <span asp-validation-for="Translations[i].Slug" class="text-danger"></span>
        </div>
        <div class="mb-0">
            <label asp-for="Translations[i].Description" class="form-label">@Localizer["TranslationDescriptionLabel", localeLabel]</label>
            <textarea asp-for="Translations[i].Description" class="form-control" rows="3"></textarea>
            <div class="form-text">@Localizer["TranslationDescriptionHelp", localeLabel]</div>
            <span asp-validation-for="Translations[i].Description" class="text-danger"></span>
        </div>
    </fieldset>
}
