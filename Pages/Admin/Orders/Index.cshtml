@page
@model SysJaky_N.Pages.Admin.Orders.IndexModel
@using SysJaky_N.Models
@{
    ViewData["Title"] = "Objednávky";
}

<h1>Objednávky</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Datum</th>
            <th>Stav</th>
            <th>Celkem</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.CreatedAt.ToString("g")</td>
            <td>@(order.Status switch
                {
                    OrderStatus.Pending => "Čeká na platbu",
                    OrderStatus.Paid => "Zaplaceno",
                    OrderStatus.Cancelled => "Zrušeno",
                    OrderStatus.Refunded => "Vráceno",
                    _ => order.Status.ToString()
                })</td>
            <td>@order.Total</td>
            <td>
                <a asp-page="Details" asp-route-id="@order.Id">Detail</a> |
                <a asp-page="Edit" asp-route-id="@order.Id">Změnit stav</a>
            </td>
        </tr>
    }
    </tbody>
</table>

