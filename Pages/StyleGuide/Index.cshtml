@page "/StyleGuide"
@using Microsoft.AspNetCore.Authorization
@using SysJaky_N.Authorization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@attribute [Authorize(Policy = AuthorizationPolicies.AdminOnly)]
@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container-xxl py-5">
    <header class="mb-5 pb-4 border-bottom">
        <p class="text-uppercase text-muted small fw-semibold mb-2">@Localizer["HeaderTagline"]</p>
        <h1 class="display-5 fw-semibold mb-3">@Localizer["HeaderHeading"]</h1>
        <p class="lead mb-0">@Localizer["HeaderDescription"]</p>
    </header>

    <section id="colors" class="mb-5">
        <h2 class="h3 mb-4">@Localizer["ColorsHeading"]</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 g-4">
            <div class="col">
                <div class="border rounded-3 h-100">
                    <div class="ratio ratio-16x9 rounded-top" style="background-color: var(--color-primary-600);"></div>
                    <div class="p-3">
                        <h3 class="h5 mb-1">@Localizer["ColorCoreBlueTitle"]</h3>
                        <p class="text-muted small mb-2">@Localizer["ColorCoreBlueHex"]</p>
                        <p class="mb-0">@Localizer["ColorCoreBlueDescription"]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="border rounded-3 h-100">
                    <div class="ratio ratio-16x9 rounded-top" style="background-color: var(--color-accent-500);"></div>
                    <div class="p-3">
                        <h3 class="h5 mb-1">@Localizer["ColorSignalYellowTitle"]</h3>
                        <p class="text-muted small mb-2">@Localizer["ColorSignalYellowHex"]</p>
                        <p class="mb-0">@Localizer["ColorSignalYellowDescription"]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="border rounded-3 h-100">
                    <div class="ratio ratio-16x9 rounded-top" style="background-color: var(--color-neutral-200);"></div>
                    <div class="p-3">
                        <h3 class="h5 mb-1">@Localizer["ColorLightGreyTitle"]</h3>
                        <p class="text-muted small mb-2">@Localizer["ColorLightGreyHex"]</p>
                        <p class="mb-0">@Localizer["ColorLightGreyDescription"]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="border rounded-3 h-100">
                    <div class="ratio ratio-16x9 rounded-top" style="background-color: var(--surface-page);"></div>
                    <div class="p-3">
                        <h3 class="h5 mb-1">@Localizer["ColorIvoryBaseTitle"]</h3>
                        <p class="text-muted small mb-2">@Localizer["ColorIvoryBaseHex"]</p>
                        <p class="mb-0">@Localizer["ColorIvoryBaseDescription"]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="border rounded-3 h-100">
                    <div class="ratio ratio-16x9 rounded-top" style="background-color: var(--color-neutral-900);"></div>
                    <div class="p-3">
                        <h3 class="h5 mb-1">@Localizer["ColorAnthraciteTitle"]</h3>
                        <p class="text-muted small mb-2">@Localizer["ColorAnthraciteHex"]</p>
                        <p class="mb-0">@Localizer["ColorAnthraciteDescription"]</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="typography" class="mb-5">
        <h2 class="h3 mb-4">@Localizer["TypographyHeading"]</h2>
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="p-4 bg-white border rounded-3 h-100">
                    <h3 class="h5">@Localizer["TypographyHierarchyTitle"]</h3>
                    <p class="text-muted small">@Localizer["TypographyHierarchyDescription"]</p>
                    <h1 class="display-5 mb-2">@Localizer["TypographyDisplay"]</h1>
                    <h2 class="h1 mb-2">@Localizer["TypographyH1"]</h2>
                    <h3 class="h2 mb-2">@Localizer["TypographyH2"]</h3>
                    <h4 class="h3 mb-2">@Localizer["TypographyH3"]</h4>
                    <p class="fs-5 mb-2">@Localizer["TypographyLead"]</p>
                    <p class="mb-2">@Localizer["TypographyBody"]</p>
                    <p class="text-muted mb-0"><small>@Localizer["TypographyCaption"]</small></p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="p-4 bg-white border rounded-3 h-100">
                    <h3 class="h5">@Localizer["TypographyRulesTitle"]</h3>
                    <ul class="mb-0">
                        <li>@Html.Raw(Localizer["TypographyRule1"])</li>
                        <li>@Html.Raw(Localizer["TypographyRule2"])</li>
                        <li>@Html.Raw(Localizer["TypographyRule3"])</li>
                        <li>@Html.Raw(Localizer["TypographyRule4"])</li>
                        <li>@Html.Raw(Localizer["TypographyRule5"])</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section id="components" class="mb-5">
        <h2 class="h3 mb-4">@Localizer["ComponentsHeading"]</h2>

        <article class="mb-5">
            <header class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-3">
                <div>
                    <h3 class="h4 mb-1">@Localizer["ButtonsTitle"]</h3>
                    <p class="text-muted mb-0">@Html.Raw(Localizer["ButtonsDescription"])</p>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <button type="button" class="btn btn-primary">@Localizer["ButtonsPrimary"]</button>
                    <button type="button" class="btn btn-outline-primary">@Localizer["ButtonsSecondary"]</button>
                    <button type="button" class="btn btn-link text-decoration-none">@Localizer["ButtonsGhost"]</button>
                </div>
            </header>
            <pre class="bg-dark text-white p-3 rounded-3 overflow-auto"><code>&lt;button type=&quot;button&quot; class=&quot;btn btn-primary&quot;&gt;Primary button&lt;/button&gt;
&lt;button type=&quot;button&quot; class=&quot;btn btn-outline-primary&quot;&gt;Secondary button&lt;/button&gt;
&lt;button type=&quot;button&quot; class=&quot;btn btn-link text-decoration-none&quot;&gt;Ghost button&lt;/button&gt;</code></pre>
        </article>

        <article class="mb-5">
            <header class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-3">
                <div>
                    <h3 class="h4 mb-1">@Localizer["CardsTitle"]</h3>
                    <p class="text-muted mb-0">@Html.Raw(Localizer["CardsDescription"])</p>
                </div>
            </header>
            <div class="row g-4 mb-3">
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h4 class="card-title">@Localizer["CardDefaultTitle"]</h4>
                            <p class="card-text">@Html.Raw(Localizer["CardDefaultBody"])</p>
                            <a href="#" class="btn btn-primary btn-sm">@Localizer["CardDefaultAction"]</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card card-hover h-100">
                        <div class="card-body">
                            <h4 class="card-title">@Localizer["CardHoverTitle"]</h4>
                            <p class="card-text">@Html.Raw(Localizer["CardHoverBody"])</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">@Localizer["CardHoverAction"]</a>
                        </div>
                    </div>
                </div>
            </div>
            <pre class="bg-dark text-white p-3 rounded-3 overflow-auto"><code>&lt;div class=&quot;card&quot;&gt;
    &lt;div class=&quot;card-body&quot;&gt;
        &lt;h4 class=&quot;card-title&quot;&gt;Základní karta&lt;/h4&gt;
        &lt;p class=&quot;card-text&quot;&gt;...&lt;/p&gt;
        &lt;a href=&quot;#&quot; class=&quot;btn btn-primary btn-sm&quot;&gt;Akce&lt;/a&gt;
    &lt;/div&gt;
&lt;/div&gt;

&lt;div class=&quot;card card-hover&quot;&gt;
    &lt;div class=&quot;card-body&quot;&gt;
        &lt;h4 class=&quot;card-title&quot;&gt;Hover varianta&lt;/h4&gt;
        &lt;p class=&quot;card-text&quot;&gt;...&lt;/p&gt;
        &lt;a href=&quot;#&quot; class=&quot;btn btn-outline-primary btn-sm&quot;&gt;Více&lt;/a&gt;
    &lt;/div&gt;
&lt;/div&gt;</code></pre>
        </article>

        <article class="mb-5">
            <header class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-3">
                <div>
                    <h3 class="h4 mb-1">@Localizer["FormsTitle"]</h3>
                    <p class="text-muted mb-0">@Html.Raw(Localizer["FormsDescription"])</p>
                </div>
            </header>
            <form class="row g-3 mb-3" novalidate>
                <div class="col-md-6">
                    <label for="styleGuideInput" class="form-label">@Localizer["FormTextInputLabel"]</label>
                    <input type="text" class="form-control" id="styleGuideInput" placeholder='@Localizer["FormTextInputPlaceholder"]' />
                </div>
                <div class="col-md-6">
                    <label for="styleGuideSelect" class="form-label">@Localizer["FormSelectLabel"]</label>
                    <select class="form-select" id="styleGuideSelect">
                        <option>@Localizer["FormSelectOption1"]</option>
                        <option>@Localizer["FormSelectOption2"]</option>
                        <option>@Localizer["FormSelectOption3"]</option>
                    </select>
                </div>
            </form>
            <pre class="bg-dark text-white p-3 rounded-3 overflow-auto"><code>&lt;label for=&quot;inputId&quot; class=&quot;form-label&quot;&gt;Text input&lt;/label&gt;
&lt;input type=&quot;text&quot; class=&quot;form-control&quot; id=&quot;inputId&quot; placeholder=&quot;...&quot; /&gt;

&lt;label for=&quot;selectId&quot; class=&quot;form-label&quot;&gt;Select input&lt;/label&gt;
&lt;select class=&quot;form-select&quot; id=&quot;selectId&quot;&gt;
    &lt;option&gt;Možnost 1&lt;/option&gt;
&lt;/select&gt;</code></pre>
        </article>

        <article class="mb-5">
            <header class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-3">
                <div>
                    <h3 class="h4 mb-1">@Localizer["ChipsTitle"]</h3>
                    <p class="text-muted mb-0">@Html.Raw(Localizer["ChipsDescription"])</p>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <a class="chip" href="#">@Localizer["ChipDefault"]</a>
                    <a class="chip chip-light" href="#">@Localizer["ChipLight"]</a>
                </div>
            </header>
            <pre class="bg-dark text-white p-3 rounded-3 overflow-auto"><code>&lt;a class=&quot;chip&quot; href=&quot;#&quot;&gt;Chip&lt;/a&gt;
&lt;a class=&quot;chip chip-light&quot; href=&quot;#&quot;&gt;Chip light&lt;/a&gt;</code></pre>
        </article>

        <article class="mb-5">
            <header class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-3">
                <div>
                    <h3 class="h4 mb-1">@Localizer["IconsTitle"]</h3>
                    <p class="text-muted mb-0">@Html.Raw(Localizer["IconsDescription"])</p>
                </div>
                <div class="d-flex flex-wrap align-items-center gap-3 fs-3 text-primary">
                    <i class="bi bi-lightning-charge-fill" aria-hidden="true"></i>
                    <i class="bi bi-people-fill" aria-hidden="true"></i>
                    <i class="bi bi-mortarboard-fill" aria-hidden="true"></i>
                </div>
            </header>
            <pre class="bg-dark text-white p-3 rounded-3 overflow-auto"><code>&lt;i class=&quot;bi bi-lightning-charge-fill&quot; aria-hidden=&quot;true&quot;&gt;&lt;/i&gt;</code></pre>
        </article>
    </section>

    <section id="spacing" class="mb-5">
        <h2 class="h3 mb-4">@Localizer["SpacingHeading"]</h2>
        <p class="text-muted">@Html.Raw(Localizer["SpacingDescription"])</p>
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>@Localizer["SpacingTableToken"]</th>
                        <th>@Localizer["SpacingTableRem"]</th>
                        <th>@Localizer["SpacingTableExample"]</th>
                        <th>@Localizer["SpacingTableDescription"]</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><code>0</code></td>
                        <td>0</td>
                        <td><code>.p-0</code></td>
                        <td>@Localizer["SpacingRow0"]</td>
                    </tr>
                    <tr>
                        <td><code>1</code></td>
                        <td>0.25rem</td>
                        <td><code>.px-1</code></td>
                        <td>@Localizer["SpacingRow1"]</td>
                    </tr>
                    <tr>
                        <td><code>2</code></td>
                        <td>0.5rem</td>
                        <td><code>.my-2</code></td>
                        <td>@Localizer["SpacingRow2"]</td>
                    </tr>
                    <tr>
                        <td><code>3</code></td>
                        <td>1rem</td>
                        <td><code>.p-3</code></td>
                        <td>@Localizer["SpacingRow3"]</td>
                    </tr>
                    <tr>
                        <td><code>4</code></td>
                        <td>1.5rem</td>
                        <td><code>.pt-4</code></td>
                        <td>@Localizer["SpacingRow4"]</td>
                    </tr>
                    <tr>
                        <td><code>5</code></td>
                        <td>3rem</td>
                        <td><code>.py-5</code></td>
                        <td>@Localizer["SpacingRow5"]</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <section id="breakpoints" class="mb-5">
        <h2 class="h3 mb-4">@Localizer["BreakpointsHeading"]</h2>
        <div class="table-responsive mb-3">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>@Localizer["BreakpointsTableBreakpoint"]</th>
                        <th>@Localizer["BreakpointsTableWidth"]</th>
                        <th>@Localizer["BreakpointsTableUsage"]</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><code>xs</code></td>
                        <td>&lt;576px</td>
                        <td>@Localizer["BreakpointsRowXs"]</td>
                    </tr>
                    <tr>
                        <td><code>sm</code></td>
                        <td>≥576px</td>
                        <td>@Html.Raw(Localizer["BreakpointsRowSm"])</td>
                    </tr>
                    <tr>
                        <td><code>md</code></td>
                        <td>≥768px</td>
                        <td>@Localizer["BreakpointsRowMd"]</td>
                    </tr>
                    <tr>
                        <td><code>lg</code></td>
                        <td>≥992px</td>
                        <td>@Html.Raw(Localizer["BreakpointsRowLg"])</td>
                    </tr>
                    <tr>
                        <td><code>xl</code></td>
                        <td>≥1200px</td>
                        <td>@Localizer["BreakpointsRowXl"]</td>
                    </tr>
                    <tr>
                        <td><code>xxl</code></td>
                        <td>≥1400px</td>
                        <td>@Localizer["BreakpointsRowXxl"]</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p class="mb-0">@Html.Raw(Localizer["BreakpointsDescription"])</p>
    </section>

    <section id="accessibility" class="mb-5">
        <h2 class="h3 mb-4">@Localizer["AccessibilityHeading"]</h2>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Localizer["AccessibilityRule1"]</li>
            <li class="list-group-item">@Html.Raw(Localizer["AccessibilityRule2"])</li>
            <li class="list-group-item">@Html.Raw(Localizer["AccessibilityRule3"])</li>
            <li class="list-group-item">@Html.Raw(Localizer["AccessibilityRule4"])</li>
            <li class="list-group-item">@Html.Raw(Localizer["AccessibilityRule5"])</li>
        </ul>
    </section>

    <section id="code" class="mb-4">
        <h2 class="h3 mb-3">@Localizer["CodeHeading"]</h2>
        <p class="mb-3">@Html.Raw(Localizer["CodeDescription"])</p>
        <div class="alert alert-info mb-0" role="note">
            <strong>@Localizer["CodeTipLabel"]</strong> @Localizer["CodeTipText"]
        </div>
    </section>
</div>
