<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - SysJaky_N</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/design-system.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/utilities.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/modals.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/styles.min.css" asp-append-version="true" />
</head>
<body class="admin-shell">
@{
    var page = ViewContext.RouteData.Values["page"]?.ToString() ?? string.Empty;
    string ActiveClass(string prefix) => page.StartsWith(prefix, System.StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty;
}
    <header class="admin-nav">
        <div class="admin-nav__container container-fluid">
            <a class="admin-nav__brand" asp-page="/Admin/Dashboard/Index">
                <i class="bi bi-speedometer2 fs-4"></i>
                <span class="h4 mb-0">Administrace</span>
            </a>
            <div class="admin-nav__cta">
                <button class="btn btn-admin-ghost admin-nav__toggle d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#adminSidebar" aria-controls="adminSidebar" aria-expanded="false" aria-label="Přepnout navigaci">
                    <i class="bi bi-list"></i>
                    Navigace
                </button>
                <a class="btn btn-admin-primary" asp-page="/Index">Zpět na web</a>
            </div>
        </div>
    </header>

    <div class="admin-shell__body">
        <aside id="adminSidebar" class="admin-shell__sidebar collapse d-lg-block">
            <nav class="admin-sidebar" aria-label="Navigace administrace">
                <div class="admin-sidebar__section">
                    <h2 class="admin-sidebar__heading">Obsah</h2>
                    <ul class="admin-sidebar__list">
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Dashboard")" asp-page="/Admin/Dashboard/Index">Přehled</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Articles")" asp-page="/Admin/Articles/Index">Články</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Testimonials")" asp-page="/Admin/Testimonials/Index">Reference</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/CourseReviews")" asp-page="/Admin/CourseReviews/Index">Hodnocení kurzů</a></li>
                    </ul>
                </div>
                <div class="admin-sidebar__section">
                    <h2 class="admin-sidebar__heading">Kurzy</h2>
                    <ul class="admin-sidebar__list">
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Courses")" asp-page="/Admin/Courses/Index">Kurzy</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/CourseGroups")" asp-page="/Admin/CourseGroups/Index">Skupiny kurzů</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/CourseTerms")" asp-page="/Admin/CourseTerms/Index">Termíny kurzů</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/CourseBlocks")" asp-page="/Admin/CourseBlocks/Index">Bloky kurzů</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Instructors")" asp-page="/Admin/Instructors/Index">Lektoři</a></li>
                    </ul>
                </div>
                <div class="admin-sidebar__section">
                    <h2 class="admin-sidebar__heading">Prodej</h2>
                    <ul class="admin-sidebar__list">
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/PriceSchedules")" asp-page="/Admin/PriceSchedules/Index">Ceníky</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Vouchers")" asp-page="/Admin/Vouchers/Index">Poukázky</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Orders")" asp-page="/Admin/Orders/Index">Objednávky</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Companies")" asp-page="/Admin/Companies/Index">Firmy</a></li>
                    </ul>
                </div>
                <div class="admin-sidebar__section">
                    <h2 class="admin-sidebar__heading">Systém</h2>
                    <ul class="admin-sidebar__list">
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/Users")" asp-page="/Admin/Users/Index">Uživatelé</a></li>
                        <li><a class="admin-sidebar__link @ActiveClass("/Admin/AuditLogs")" asp-page="/Admin/AuditLogs/Index">Auditní záznamy</a></li>
                    </ul>
                </div>
            </nav>
        </aside>
        <main role="main" class="admin-shell__content admin-main container-fluid">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
