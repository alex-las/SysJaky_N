@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<section class="py-5">
    <div class="container">
        <div class="section-heading text-center mb-5 align-items-center">
            <span class="ribbon-label text-uppercase">@Localizer["HeroBadge"]</span>
            <h1 class="display-5 fw-bold mt-3 text-gradient">@Localizer["HeroHeading"]</h1>
            <p class="lead text-muted description">@Localizer["HeroDescription"]</p>
        </div>

        <div class="row g-4">
            <div class="col-12 col-lg-6">
                <article class="card-modern h-100">
                    <div class="d-flex align-items-center gap-3">
                        <div class="icon-box icon-box-lg text-primary">
                            <i class="bi bi-clipboard-check fs-4" aria-hidden="true"></i>
                        </div>
                        <h2 class="h4 mb-0">@Localizer["ServiceCard1Title"]</h2>
                    </div>
                    <p class="mb-0 text-muted">@Localizer["ServiceCard1Description"]</p>
                </article>
            </div>
            <div class="col-12 col-lg-6">
                <article class="card-modern h-100">
                    <div class="d-flex align-items-center gap-3">
                        <div class="icon-box icon-box-lg text-success">
                            <i class="bi bi-diagram-3 fs-4" aria-hidden="true"></i>
                        </div>
                        <h2 class="h4 mb-0">@Localizer["ServiceCard2Title"]</h2>
                    </div>
                    <p class="mb-0 text-muted">@Localizer["ServiceCard2Description"]</p>
                </article>
            </div>
            <div class="col-12 col-lg-6">
                <article class="card-modern h-100">
                    <div class="d-flex align-items-center gap-3">
                        <div class="icon-box icon-box-warning icon-box-lg text-warning">
                            <i class="bi bi-mortarboard fs-4" aria-hidden="true"></i>
                        </div>
                        <h2 class="h4 mb-0">@Localizer["ServiceCard3Title"]</h2>
                    </div>
                    <p class="mb-0 text-muted">@Localizer["ServiceCard3Description"]</p>
                </article>
            </div>
            <div class="col-12 col-lg-6">
                <article class="card-modern h-100">
                    <div class="d-flex align-items-center gap-3">
                        <div class="icon-box icon-box-lg text-info">
                            <i class="bi bi-shield-lock fs-4" aria-hidden="true"></i>
                        </div>
                        <h2 class="h4 mb-0">@Localizer["ServiceCard4Title"]</h2>
                    </div>
                    <p class="mb-0 text-muted">@Localizer["ServiceCard4Description"]</p>
                </article>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("/Pages/Shared/_ServiceOverviewSnippets.cshtml")

<section class="py-5 bg-light rounded-4">
    <div class="container py-4">
        <div class="section-heading text-center mb-5 align-items-center">
            <span class="ribbon-label text-uppercase">
                <i class="bi bi-stars text-warning" aria-hidden="true"></i>
                @Localizer["HighlightsBadge"]
            </span>
            <h2 class="mt-3">@Localizer["HighlightsHeading"]</h2>
            <p class="text-muted mb-0 description">@Localizer["HighlightsDescription"]</p>
        </div>

        <div class="feature-stack feature-stack-4">
            <article class="card-modern h-100 text-center">
                <span class="icon-box icon-box-lg text-primary mx-auto">
                    <i class="bi bi-graph-up-arrow fs-4" aria-hidden="true"></i>
                </span>
                <h3 class="h5 mt-3">@Localizer["Highlight1Title"]</h3>
                <p class="text-muted mb-0">@Localizer["Highlight1Description"]</p>
            </article>
            <article class="card-modern h-100 text-center">
                <span class="icon-box icon-box-lg text-success mx-auto">
                    <i class="bi bi-people fs-4" aria-hidden="true"></i>
                </span>
                <h3 class="h5 mt-3">@Localizer["Highlight2Title"]</h3>
                <p class="text-muted mb-0">@Localizer["Highlight2Description"]</p>
            </article>
            <article class="card-modern h-100 text-center">
                <span class="icon-box icon-box-warning icon-box-lg text-warning mx-auto">
                    <i class="bi bi-tools fs-4" aria-hidden="true"></i>
                </span>
                <h3 class="h5 mt-3">@Localizer["Highlight3Title"]</h3>
                <p class="text-muted mb-0">@Localizer["Highlight3Description"]</p>
            </article>
            <article class="card-modern h-100 text-center">
                <span class="icon-box icon-box-lg text-info mx-auto">
                    <i class="bi bi-calendar-check fs-4" aria-hidden="true"></i>
                </span>
                <h3 class="h5 mt-3">@Localizer["Highlight4Title"]</h3>
                <p class="text-muted mb-0">@Localizer["Highlight4Description"]</p>
            </article>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-12 col-lg-7">
                <h2 class="h3 mb-3">@Localizer["ProcessHeading"]</h2>
                <p class="text-muted">@Localizer["ProcessDescription"]</p>
                <ol class="list-unstyled d-grid gap-3 mb-0">
                    <li class="d-flex align-items-start gap-3">
                        <span class="badge badge-soft-primary badge-pill">1</span>
                        <div>
                            <h3 class="h5 mb-1">@Localizer["ProcessStep1Title"]</h3>
                            <p class="mb-0 text-muted">@Localizer["ProcessStep1Description"]</p>
                        </div>
                    </li>
                    <li class="d-flex align-items-start gap-3">
                        <span class="badge badge-soft-primary badge-pill">2</span>
                        <div>
                            <h3 class="h5 mb-1">@Localizer["ProcessStep2Title"]</h3>
                            <p class="mb-0 text-muted">@Localizer["ProcessStep2Description"]</p>
                        </div>
                    </li>
                    <li class="d-flex align-items-start gap-3">
                        <span class="badge badge-soft-primary badge-pill">3</span>
                        <div>
                            <h3 class="h5 mb-1">@Localizer["ProcessStep3Title"]</h3>
                            <p class="mb-0 text-muted">@Localizer["ProcessStep3Description"]</p>
                        </div>
                    </li>
                </ol>
            </div>
            <div class="col-12 col-lg-5">
                <div class="p-4 p-lg-5 bg-primary text-white rounded-4 shadow-lift glow-ring">
                    <h3 class="h4 mb-3">@Localizer["CtaHeading"]</h3>
                    <p class="mb-4">@Localizer["CtaDescription"]</p>
                    <div class="d-grid gap-2">
                        <a class="btn btn-light" asp-page="/CorporateInquiry">@Localizer["CtaPrimaryButton"]</a>
                        <a class="btn btn-outline-light" asp-page="/Contact">@Localizer["CtaSecondaryButton"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_FaqAccordion" />

