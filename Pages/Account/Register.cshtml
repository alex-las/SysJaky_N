@page
@model SysJaky_N.Pages.Account.RegisterModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{ 
    ViewData["Title"] = Localizer["RegisterTitle"];
    var registerTitle = Localizer["RegisterTitle"].Value;
    var registerFormOptions = new RegisterFormOptions
    {
        Input = Model.Input,
        FormId = "account-register-form",
        FormCssClass = "card card-body p-4 auth-form",
        HeadingText = registerTitle,
        HeadingTagName = "h1",
        HeadingId = "account-register-heading",
        IntroText = Localizer["RegisterIntro"].Value,
        FormAriaLabelledById = "account-register-heading",
        ValidationSummaryCssClass = "text-danger",
        EmailInputId = "account-register-email",
        PasswordInputId = "account-register-password",
        ConfirmPasswordInputId = "account-register-confirm",
        ReferralCodeInputId = "account-register-referral",
        AltchaId = "account-register-altcha",
        AltchaChallengeUrl = "~/altcha/challenge",
        AltchaWorkerVersionSuffix = string.Empty,
        AltchaWorkers = "1",
        AltchaMaxNumber = "500000",
        IncludeConfirmPassword = true,
        IncludeReferralCode = true,
        EnableRefetchOnExpire = true,
        ReferralCodeHelpText = Localizer["RegisterReferralHelp"].Value
    };
}

<div class="auth-form-container" data-page="account-register">
    <div class="card card-body p-4 auth-form">
        <div class="text-center mb-4">
            <h1>@Localizer["RegisterTitle"]</h1>
            <p class="lead mb-0">@Localizer["RegisterLead"]</p>
        </div>

        <form id="account-register-form" method="post" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-0">
                <label asp-for="Input.Email" class="form-label">@Localizer["EmailLabel"]</label>
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       placeholder="@Localizer["EmailPlaceholder"]"
                       aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-0">
                <label asp-for="Input.Password" class="form-label">@Localizer["PasswordLabel"]</label>
                <input asp-for="Input.Password"
                       type="password"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="@Localizer["PasswordPlaceholder"]"
                       aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-0">
                <label asp-for="Input.ConfirmPassword" class="form-label">@Localizer["ConfirmPasswordLabel"]</label>
                <input asp-for="Input.ConfirmPassword"
                       type="password"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="@Localizer["ConfirmPasswordPlaceholder"]"
                       aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-0">
                <label asp-for="Input.ReferralCode" class="form-label">@Localizer["ReferralCodeLabel"]</label>
                <input asp-for="Input.ReferralCode"
                       class="form-control"
                       placeholder="@Localizer["ReferralCodePlaceholder"]" />
                <span asp-validation-for="Input.ReferralCode" class="text-danger"></span>
            </div>

            <div>
                <altcha-widget
                    id="account-register-altcha"
                    challengeurl="@Url.Page("/Altcha/Challenge")"
                    hidefooter="false"
                    hidelogo="false"
                    workers="1"
                    maxnumber="500000"
                    strings='@System.Text.Json.JsonSerializer.Serialize(new {
                        error = "Ověření se nezdařilo",
                        expired = "Ověření vypršelo. Zkuste to znovu.",
                        footer = "Ochrana proti spamu",
                        label = "Jsem člověk",
                        verified = "Ověřeno",
                        verifying = "Ověřuji...",
                        waitAlert = "Ověřování..."
                    })'>
                </altcha-widget>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">@Localizer["RegisterButton"]</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <p class="mb-0">
                @Localizer["AlreadyHaveAccount"]
                <a asp-page="/Account/Login">@Localizer["LoginLink"]</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
