        <div class="row g-4">
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="process-step-number mx-auto mb-3">1</div>
                    <h3 class="h5 fw-semibold">@T["ProcessStep1Title"]</h3>
                    <p class="text-muted">@T["ProcessStep1Description"]</p>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="process-step-number mx-auto mb-3">2</div>
                    <h3 class="h5 fw-semibold">@T["ProcessStep2Title"]</h3>
                    <p class="text-muted">@T["ProcessStep2Description"]</p>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="text-center">
                    <div class="process-step-number mx-auto mb-3">3</div>
